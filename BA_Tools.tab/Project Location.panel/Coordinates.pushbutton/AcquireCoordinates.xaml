<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BA_Tools" 
        Width="700" Height="650"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#14141C">
    
    <Window.Resources>
        <!-- Primary Button Style (Blue) -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2196F3"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#404050"/>
                    <Setter Property="Foreground" Value="#DCDCDC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style (Gray) -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#3C3C46"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4C4C56"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- RadioButton Style -->
        <Style x:Key="DarkRadioButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="radioBorder"
                                    Width="18" 
                                    Height="18" 
                                    Background="#0A0A0F"
                                    BorderBrush="#1976D2"
                                    BorderThickness="2"
                                    CornerRadius="9"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center">
                                <Ellipse x:Name="radioMark"
                                        Width="8"
                                        Height="8"
                                        Fill="White"
                                        Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="radioMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="radioBorder" Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="radioBorder" Property="BorderBrush" Value="#2196F3"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Label Style -->
        <Style x:Key="HeaderLabel" TargetType="Label">
            <Setter Property="Foreground" Value="#808090"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="SectionLabel" TargetType="Label">
            <Setter Property="Foreground" Value="#B0B0C0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- ListBox Style -->
        <Style x:Key="DarkListBox" TargetType="ListBox">
            <Setter Property="Background" Value="#0A0A0F"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="BorderBrush" Value="#1976D2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="DarkListBoxItem" TargetType="ListBoxItem">
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="8,5"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2C2C36"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
<Border Grid.Row="0"
        Background="#1E1E28"
        BorderBrush="#1976D2"
        BorderThickness="0,0,0,2">

    <Grid Margin="20,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Logo -->
        <Border Grid.Column="0"
                Background="#1976D2"
                CornerRadius="3"
                Width="45"
                Height="45"
                VerticalAlignment="Center">
            <TextBlock Text="BA"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Title -->
        <StackPanel Grid.Column="1"
                    VerticalAlignment="Center"
                    Margin="12,0,0,0">
            <TextBlock Text="ACQUIRE COORDINATES"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"/>
            <TextBlock Text="Match coordinates from linked models"
                       FontSize="11"
                       Foreground="#808090"
                       Margin="0,2,0,0"/>
        </StackPanel>

        <!-- Close -->
        <Button Grid.Column="2"
                x:Name="btnClose"
                Content="Close"
                Width="85"
                Height="32"
                VerticalAlignment="Center"
                Style="{StaticResource SecondaryButton}"/>
    </Grid>
</Border>


        <!-- MAIN CONTENT -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20">
            <StackPanel>
                
                <!-- Method Selection -->
                <Border Background="#1E1E28" CornerRadius="3" BorderBrush="#1976D2" 
                        BorderThickness="1" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <Label Content="ACQUISITION METHOD" Style="{StaticResource HeaderLabel}" 
                             Margin="0,0,0,15"/>

                        <RadioButton x:Name="rbVisualPosition" 
                                   Content="Visual Position (Recommended)" 
                                   Style="{StaticResource DarkRadioButton}"
                                   IsChecked="True"
                                   GroupName="Method"/>
                        <TextBlock Text="Finds where Survey/Project Base Points physically appear in 3D space and matches your points to those locations. Works even if linked model has coordinates at (0,0,0)." 
                                 FontSize="9" Foreground="#606070" FontFamily="Segoe UI" 
                                 Margin="28,2,0,10" TextWrapping="Wrap"/>

                        <RadioButton x:Name="rbCoordinateValues" 
                                   Content="Coordinate Values" 
                                   Style="{StaticResource DarkRadioButton}"
                                   GroupName="Method"/>
                        <TextBlock Text="Reads coordinate values from linked model and applies them to your model. Only works if linked model has non-zero coordinates." 
                                 FontSize="9" Foreground="#606070" FontFamily="Segoe UI" 
                                 Margin="28,2,0,0" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Current Coordinates -->
                <Border Background="#1E1E28" CornerRadius="3" BorderBrush="#1976D2" 
                        BorderThickness="1" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <Label Content="YOUR MODEL (CURRENT)" Style="{StaticResource HeaderLabel}" 
                             Margin="0,0,0,10"/>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Survey Point:" Grid.Row="0" Grid.Column="0"
                                     Foreground="#B0B0C0" FontFamily="Segoe UI" FontSize="11"
                                     VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtCurrentSurvey" Grid.Row="0" Grid.Column="1"
                                     Text="(0.000, 0.000, 0.000)"
                                     Foreground="#DCDCDC" FontFamily="Consolas" FontSize="11"
                                     VerticalAlignment="Center"/>

                            <TextBlock Text="Project Base:" Grid.Row="1" Grid.Column="0"
                                     Foreground="#B0B0C0" FontFamily="Segoe UI" FontSize="11"
                                     VerticalAlignment="Center" Margin="0,5,0,0"/>
                            <TextBlock x:Name="txtCurrentProject" Grid.Row="1" Grid.Column="1"
                                     Text="(0.000, 0.000, 0.000)"
                                     Foreground="#DCDCDC" FontFamily="Consolas" FontSize="11"
                                     VerticalAlignment="Center" Margin="0,5,0,0"/>
                        </Grid>

                        <Button x:Name="btnRefresh" 
                                Content="ðŸ”„ REFRESH" 
                                Height="32"
                                Style="{StaticResource SecondaryButton}"/>
                    </StackPanel>
                </Border>

                <!-- Linked Models -->
                <Border Background="#1E1E28" CornerRadius="3" BorderBrush="#1976D2" 
                        BorderThickness="1" Padding="20">
                    <StackPanel>
                        <Label Content="LINKED MODELS" Style="{StaticResource HeaderLabel}" 
                             Margin="0,0,0,10"/>

                        <ListBox x:Name="lstLinkedModels" 
                               Height="200"
                               Style="{StaticResource DarkListBox}"
                               ItemContainerStyle="{StaticResource DarkListBoxItem}"/>

                        <TextBlock x:Name="txtLinkInfo"
                                 Text="Select a linked model above to see its coordinates"
                                 FontSize="10" Foreground="#606070" FontFamily="Segoe UI" 
                                 Margin="0,10,0,0" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- FOOTER -->
        <Border Grid.Row="2" Background="#1E1E28" BorderBrush="#1976D2" BorderThickness="0,2,0,0">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="txtStatus" 
                         Grid.Column="0"
                         Text="Ready to acquire coordinates"
                         FontFamily="Segoe UI" 
                         FontSize="11" 
                         Foreground="#808090"
                         VerticalAlignment="Center"/>

                <Button x:Name="btnAcquire" 
                        Grid.Column="1"
                        Content="ACQUIRE FROM SELECTED" 
                        Width="200" 
                        Height="40"
                        Style="{StaticResource PrimaryButton}"/>
            </Grid>
        </Border>

    </Grid>
</Window>
