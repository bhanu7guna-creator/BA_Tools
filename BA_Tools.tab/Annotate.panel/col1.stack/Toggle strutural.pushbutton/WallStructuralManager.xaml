<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BA_Tools" 
        Width="900" Height="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#14141C"
        x:Name="MainWindow">
    
    <Window.Resources>
        <!-- Primary Button Style (Blue) -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2196F3"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#404050"/>
                    <Setter Property="Foreground" Value="#707080"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#3C3C46"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4C4C56"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Danger Button Style (Red) -->
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#D32F2F"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F44336"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Success Button Style (Green) -->
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#388E3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4CAF50"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="BorderBrush" Value="#1976D2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Height" Value="32"/>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="DarkTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="BorderBrush" Value="#1976D2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Height" Value="32"/>
        </Style>

        <!-- DataGrid Style -->
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="#1E1E28"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="BorderBrush" Value="#1976D2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#2A2A38"/>
            <Setter Property="RowBackground" Value="#1E1E28"/>
            <Setter Property="AlternatingRowBackground" Value="#252532"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Extended"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>

        <!-- DataGrid Column Header Style -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#2196F3"/>
        </Style>

        <!-- DataGrid Cell Style -->
        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Padding="{TemplateBinding Padding}" 
                                Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#1E1E28" BorderBrush="#1976D2" BorderThickness="0,0,0,2">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logo -->
                <Image x:Name="imgLogo" 
                       Grid.Column="0"
                       Width="40" 
                       Height="40"
                       VerticalAlignment="Center"
                       Stretch="Uniform"/>
                
                <!-- Title -->
                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock Text="WALL STRUCTURAL MANAGER" 
                             FontFamily="Segoe UI" 
                             FontSize="18" 
                             FontWeight="Bold" 
                             Foreground="White"/>
                    <TextBlock Text="Manage structural property of walls in project" 
                             FontFamily="Segoe UI" 
                             FontSize="10" 
                             Foreground="#808090"
                             Margin="0,2,0,0"/>
                </StackPanel>
                
                <!-- Close Button -->
                <Button x:Name="CloseBtn" 
                        Grid.Column="3" 
                        Content="CLOSE" 
                        Width="80" 
                        Height="32"
                        Style="{StaticResource SecondaryButton}"/>
            </Grid>
        </Border>

        <!-- FILTERS AND SEARCH -->
        <Border Grid.Row="1" Background="#1E1E28" Padding="20,15" BorderBrush="#1976D2" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Filter Label -->
                <TextBlock Grid.Column="0"
                         Text="Filter:"
                         Foreground="#B0B0C0"
                         FontFamily="Segoe UI"
                         FontSize="11"
                         VerticalAlignment="Center"/>
                
                <!-- Filter ComboBox -->
                <ComboBox x:Name="FilterCombo"
                        Grid.Column="2"
                        Style="{StaticResource DarkComboBox}"/>
                
                <!-- Search Label -->
                <TextBlock Grid.Column="4"
                         Text="Search:"
                         Foreground="#B0B0C0"
                         FontFamily="Segoe UI"
                         FontSize="11"
                         VerticalAlignment="Center"/>
                
                <!-- Search TextBox -->
                <TextBox x:Name="SearchBox"
                       Grid.Column="6"
                       Style="{StaticResource DarkTextBox}"
                       ToolTip="Search by ID, Wall Type, or Level"/>
            </Grid>
        </Border>

        <!-- MAIN CONTENT - DATA GRID -->
        <Border Grid.Row="2" Background="#1E1E28" Padding="20" Margin="0,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Statistics Bar -->
                <Border Grid.Row="0" 
                        Background="#0A0A0F" 
                        BorderBrush="#1976D2" 
                        BorderThickness="1" 
                        CornerRadius="2" 
                        Padding="12,8">
                    <TextBlock x:Name="StatsText"
                             Text="Total: 0  |  Structural: 0 (0%)  |  Non-Structural: 0 (0%)  |  Selected: 0"
                             Foreground="#B0B0C0"
                             FontFamily="Segoe UI"
                             FontSize="10"
                             FontWeight="SemiBold"/>
                </Border>
                
                <!-- Data Grid -->
                <DataGrid x:Name="WallsGrid"
                        Grid.Row="2"
                        Style="{StaticResource ModernDataGrid}">
                    <DataGrid.Columns>
                        <!-- Checkbox Column -->
                        <DataGridCheckBoxColumn Header="Select" 
                                              Binding="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              Width="60"/>
                        
                        <!-- ID Column -->
                        <DataGridTextColumn Header="Wall ID" 
                                          Binding="{Binding Id}"
                                          Width="100"
                                          IsReadOnly="True"/>
                        
                        <!-- Structural Status Column -->
                        <DataGridTextColumn Header="Structural" 
                                          Binding="{Binding Structural}"
                                          Width="100"
                                          IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Structural}" Value="YES">
                                            <Setter Property="Foreground" Value="#4CAF50"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Structural}" Value="NO">
                                            <Setter Property="Foreground" Value="#F44336"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <!-- Wall Type Column -->
                        <DataGridTextColumn Header="Wall Type" 
                                          Binding="{Binding WallType}"
                                          Width="*"
                                          IsReadOnly="True"/>
                        
                        <!-- Level Column -->
                        <DataGridTextColumn Header="Level" 
                                          Binding="{Binding Level}"
                                          Width="150"
                                          IsReadOnly="True"/>
                        
                        <!-- Length Column -->
                        <DataGridTextColumn Header="Length (m)" 
                                          Binding="{Binding Length}"
                                          Width="100"
                                          IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- FOOTER - ACTION BUTTONS -->
        <Border Grid.Row="3" Background="#1E1E28" BorderBrush="#1976D2" BorderThickness="0,2,0,0">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Select All Button -->
                <Button x:Name="SelectAllBtn"
                        Grid.Column="0"
                        Content="SELECT ALL"
                        Height="40"
                        Style="{StaticResource SecondaryButton}"
                        ToolTip="Select all visible walls"/>
                
                <!-- Deselect All Button -->
                <Button x:Name="DeselectAllBtn"
                        Grid.Column="2"
                        Content="DESELECT ALL"
                        Height="40"
                        Style="{StaticResource SecondaryButton}"
                        ToolTip="Deselect all walls"/>
                
                <!-- Make Structural Button -->
                <Button x:Name="MakeStructuralBtn"
                        Grid.Column="4"
                        Content="✓ MAKE STRUCTURAL"
                        Width="180"
                        Height="40"
                        Style="{StaticResource SuccessButton}"
                        ToolTip="Make selected walls structural"/>
                
                <!-- Make Non-Structural Button -->
                <Button x:Name="MakeNonStructuralBtn"
                        Grid.Column="6"
                        Content="✗ MAKE NON-STRUCTURAL"
                        Width="200"
                        Height="40"
                        Style="{StaticResource DangerButton}"
                        ToolTip="Make selected walls non-structural"/>
            </Grid>
        </Border>

    </Grid>
</Window>
