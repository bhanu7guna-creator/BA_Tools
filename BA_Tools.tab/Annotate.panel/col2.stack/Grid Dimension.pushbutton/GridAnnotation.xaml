<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BA_Tools" 
        Width="650" Height="750"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#14141C">
    
    <Window.Resources>
        <!-- Primary Button Style (Blue) -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2196F3"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#404050"/>
                    <Setter Property="Foreground" Value="#707080"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style (Gray) -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#3C3C46"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4C4C56"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- CheckBox Style -->
        <Style x:Key="DarkCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="checkBorder"
                                    Width="18" 
                                    Height="18" 
                                    Background="#0A0A0F"
                                    BorderBrush="#1976D2"
                                    BorderThickness="2"
                                    CornerRadius="2"
                                    Margin="0,0,10,0"
                                    VerticalAlignment="Center">
                                <Path x:Name="checkMark"
                                      Data="M 0,4 L 4,8 L 10,0"
                                      Stroke="White"
                                      StrokeThickness="2"
                                      Visibility="Collapsed"
                                      Margin="2"/>
                            </Border>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="checkBorder" Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="checkBorder" Property="BorderBrush" Value="#2196F3"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Label Style -->
        <Style x:Key="HeaderLabel" TargetType="Label">
            <Setter Property="Foreground" Value="#808090"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="SectionLabel" TargetType="Label">
            <Setter Property="Foreground" Value="#B0B0C0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="DarkTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#0A0A0F"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="BorderBrush" Value="#1976D2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="CaretBrush" Value="#DCDCDC"/>
        </Style>
    </Window.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#1E1E28" BorderBrush="#1976D2" BorderThickness="0,0,0,2">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo/Icon -->
                <Border Grid.Column="0" Background="#1976D2" CornerRadius="3" 
                        Width="45" Height="45" VerticalAlignment="Center">
                    <TextBlock Text="BA" FontSize="18" FontWeight="Bold" 
                             Foreground="White" HorizontalAlignment="Center" 
                             VerticalAlignment="Center" FontFamily="Segoe UI"/>
                </Border>

                <!-- Title -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0,0,0">
                    <TextBlock Text="GRID ANNOTATION MANAGER" FontSize="18" 
                             FontWeight="Bold" Foreground="White" FontFamily="Segoe UI"/>
                    <TextBlock Text="Add grid bubble annotations and dimensions to views" 
                             FontSize="11" Foreground="#808090" FontFamily="Segoe UI" 
                             Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Close Button -->
                <Button x:Name="btnClose" Grid.Column="2" Content="Close" 
                        Style="{StaticResource SecondaryButton}" 
                        Width="85" Height="32" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20,20,20,0">
            <StackPanel>
                <!-- Grid Bubble Options -->
                <Border Background="#1E1E28" CornerRadius="3" BorderBrush="#1976D2" 
                        BorderThickness="1" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <Label Content="GRID BUBBLE ANNOTATION" Style="{StaticResource HeaderLabel}" 
                             Margin="0,0,0,15"/>

                        <!-- Vertical Grids -->
                        <Label Content="Vertical Grids" Style="{StaticResource SectionLabel}" 
                             Margin="0,0,0,10"/>
                        <Grid Margin="20,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <CheckBox x:Name="chkVerticalTop" Content="Top" 
                                    Style="{StaticResource DarkCheckBox}" Grid.Column="0"/>
                            <CheckBox x:Name="chkVerticalBottom" Content="Bottom" 
                                    Style="{StaticResource DarkCheckBox}" Grid.Column="1"/>
                        </Grid>

                        <!-- Horizontal Grids -->
                        <Label Content="Horizontal Grids" Style="{StaticResource SectionLabel}" 
                             Margin="0,0,0,10"/>
                        <Grid Margin="20,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <CheckBox x:Name="chkHorizontalLeft" Content="Left" 
                                    Style="{StaticResource DarkCheckBox}" Grid.Column="0"/>
                            <CheckBox x:Name="chkHorizontalRight" Content="Right" 
                                    Style="{StaticResource DarkCheckBox}" Grid.Column="1"/>
                        </Grid>

                        <!-- Inclined Grids -->
                        <Label Content="Inclined Grids" Style="{StaticResource SectionLabel}" 
                             Margin="0,0,0,10"/>
                        <Grid Margin="20,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <CheckBox x:Name="chkInclinedTop" Content="Top (Max Y)" 
                                    Style="{StaticResource DarkCheckBox}" Grid.Column="0"/>
                            <CheckBox x:Name="chkInclinedBottom" Content="Bottom (Min Y)" 
                                    Style="{StaticResource DarkCheckBox}" Grid.Column="1"/>
                        </Grid>

                        <TextBlock Text="Note: For inclined grids, Top is Maximum Y-value, Bottom is Minimum Y-value" 
                                 FontSize="10" Foreground="#606070" FontFamily="Segoe UI" 
                                 Margin="20,10,0,0" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Dimension Options -->
                <Border Background="#1E1E28" CornerRadius="3" BorderBrush="#1976D2" 
                        BorderThickness="1" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <Label Content="DIMENSION OPTIONS" Style="{StaticResource HeaderLabel}" 
                             Margin="0,0,0,15"/>

                        <CheckBox x:Name="chkIncludeDimensions" Content="Include Grid-to-Grid Dimensions" 
                                Style="{StaticResource DarkCheckBox}" IsChecked="True"/>
                        
                        <TextBlock Text="Creates dimension strings with all grid spacings at 10 ft offset" 
                                 FontSize="10" Foreground="#606070" FontFamily="Segoe UI" 
                                 Margin="28,5,0,10" TextWrapping="Wrap"/>

                        <CheckBox x:Name="chkEndToEndDimensions" Content="Include End-to-End Dimensions" 
                                Style="{StaticResource DarkCheckBox}"/>

                        <TextBlock Text="Creates section dimensions (first to last grid only) at 20 ft offset" 
                                 FontSize="9" Foreground="#606070" FontFamily="Segoe UI" 
                                 Margin="28,5,0,0" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- View Selection -->
                <Border Background="#1E1E28" CornerRadius="3" BorderBrush="#1976D2" 
                        BorderThickness="1" Padding="20">
                    <StackPanel>
                        <Label Content="TARGET VIEWS" Style="{StaticResource HeaderLabel}" 
                             Margin="0,0,0,15"/>

                        <CheckBox x:Name="chkAllPlanViews" Content="All Floor Plan Views" 
                                Style="{StaticResource DarkCheckBox}" IsChecked="True"/>
                        <CheckBox x:Name="chkAllStructuralPlanViews" Content="All Structural Plan Views" 
                                Style="{StaticResource DarkCheckBox}" IsChecked="True"/>
                        <CheckBox x:Name="chkActiveViewOnly" Content="Active View Only" 
                                Style="{StaticResource DarkCheckBox}"/>

                        <TextBlock Text="Select which view types to process (Floor Plans and Structural Plans only)" 
                                 FontSize="11" Foreground="#606070" FontFamily="Segoe UI" 
                                 Margin="28,10,0,0" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- FOOTER: Action Buttons -->
        <Border Grid.Row="2" Background="#1E1E28" BorderBrush="#2C2C36" 
                BorderThickness="0,1,0,0" Padding="20,0">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="txtStatus" Grid.Column="0" 
                         Text="Configure options and click Annotate" 
                         Foreground="#1976D2" FontFamily="Segoe UI" 
                         FontSize="12" VerticalAlignment="Center"/>

                <Button x:Name="btnAnnotateSelected" Content="ANNOTATE SELECTED" 
                        Style="{StaticResource SecondaryButton}" 
                        Grid.Column="1" Width="180" Height="45" Margin="0,0,10,0"/>
                <Button x:Name="btnAnnotateAll" Content="ANNOTATE ALL" 
                        Style="{StaticResource PrimaryButton}" 
                        Grid.Column="2" Width="180" Height="45"/>
            </Grid>
        </Border>
    </Grid>
</Window>
