<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BA_Tools" 
        Width="850" Height="750"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#14141C"
        x:Name="MainWindow">
    
    <Window.Resources>
        <!-- Primary Button Style (Blue) -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2196F3"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#1976D2"/>
                    <Setter Property="Foreground" Value="#DCDCDC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#3C3C46"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4C4C56"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- CheckBox Style -->
        <Style x:Key="DarkCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="checkBorder"
                                    Width="16" 
                                    Height="16" 
                                    Background="#0A0A0F"
                                    BorderBrush="#404050"
                                    BorderThickness="2"
                                    CornerRadius="2"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center">
                                <Path x:Name="checkMark"
                                      Data="M 0,4 L 3,7 L 8,0"
                                      Stroke="White"
                                      StrokeThickness="2"
                                      Visibility="Collapsed"
                                      Margin="1"/>
                            </Border>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="checkBorder" Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="checkBorder" Property="BorderBrush" Value="#2196F3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="DarkTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#0A0A0F"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="BorderBrush" Value="#404050"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="CaretBrush" Value="#DCDCDC"/>
        </Style>

        <!-- ListBox Style -->
        <Style x:Key="DarkListBox" TargetType="ListBox">
            <Setter Property="Background" Value="#0A0A0F"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="BorderBrush" Value="#404050"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>

        <!-- DataGrid Style -->
        <Style x:Key="DarkDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="#0A0A0F"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="BorderBrush" Value="#1976D2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="RowBackground" Value="#0A0A0F"/>
            <Setter Property="AlternatingRowBackground" Value="#14141C"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Extended"/>
        </Style>

        <!-- DataGrid Column Header Style -->
        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#1E1E28"/>
            <Setter Property="Foreground" Value="#B0B0C0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#1976D2"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#1E1E28" BorderBrush="#1976D2" BorderThickness="0,0,0,2">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logo -->
                <Image x:Name="imgLogo" 
                       Grid.Column="0"
                       Width="40" 
                       Height="40"
                       VerticalAlignment="Center"
                       Stretch="Uniform"/>
                
                <!-- Title -->
                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock Text="ASSEMBLY CREATION" 
                             FontFamily="Segoe UI" 
                             FontSize="18" 
                             FontWeight="Bold" 
                             Foreground="White"/>
                    <TextBlock Text="Create assemblies from walls with hosted elements" 
                             FontFamily="Segoe UI" 
                             FontSize="10" 
                             Foreground="#808090"
                             Margin="0,2,0,0"/>
                </StackPanel>
                
                <!-- Close Button -->
                <Button x:Name="btnClose" 
                        Grid.Column="3" 
                        Content="✕" 
                        Width="32" 
                        Height="32"
                        FontSize="16"
                        Style="{StaticResource SecondaryButton}"/>
            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT PANEL - Comment Values -->
            <Border Grid.Column="0" Background="#1E1E28" CornerRadius="3" 
                    BorderBrush="#1976D2" BorderThickness="1" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Title -->
                    <TextBlock Grid.Row="0" 
                             Text="WALL COMMENTS" 
                             Foreground="#808090" 
                             FontSize="10" 
                             FontWeight="SemiBold"/>

                    <!-- Filter -->
                    <TextBox x:Name="txtCommentFilter"
                           Grid.Row="2"
                           Style="{StaticResource DarkTextBox}"
                           Height="32">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="2"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <!-- Comment List -->
                    <ListBox x:Name="lstComments"
                           Grid.Row="4"
                           Style="{StaticResource DarkListBox}"
                           SelectionMode="Multiple">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Style="{StaticResource DarkCheckBox}"
                                        IsChecked="{Binding IsSelected}"
                                        Margin="5,3">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Comment}" 
                                                 Foreground="#DCDCDC" 
                                                 FontWeight="SemiBold"
                                                 VerticalAlignment="Center"/>
                                        <TextBlock Text=" (" 
                                                 Foreground="#808090"
                                                 VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Count}" 
                                                 Foreground="#1976D2"
                                                 FontWeight="Bold"
                                                 VerticalAlignment="Center"/>
                                        <TextBlock Text=")" 
                                                 Foreground="#808090"
                                                 VerticalAlignment="Center"/>
                                    </StackPanel>
                                </CheckBox>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Selection Buttons -->
                    <Grid Grid.Row="6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="btnSelectAllComments"
                              Grid.Column="0"
                              Content="ALL"
                              Height="28"
                              FontSize="10"
                              Style="{StaticResource SecondaryButton}"/>

                        <Button x:Name="btnClearComments"
                              Grid.Column="2"
                              Content="NONE"
                              Height="28"
                              FontSize="10"
                              Style="{StaticResource SecondaryButton}"/>
                    </Grid>

                    <!-- Load Button -->
                    <Button x:Name="btnLoadWalls"
                          Grid.Row="8"
                          Content="LOAD WALLS"
                          Height="35"
                          Style="{StaticResource PrimaryButton}"/>
                </Grid>
            </Border>

            <!-- RIGHT PANEL - Walls Table -->
            <Border Grid.Column="2" Background="#1E1E28" CornerRadius="3" 
                    BorderBrush="#1976D2" BorderThickness="1" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Info Panel -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock x:Name="txtSelectedComment"
                                     Text="Select a comment from the left panel" 
                                     Foreground="#B0B0C0" 
                                     FontSize="12"
                                     FontWeight="SemiBold"/>
                            <TextBlock x:Name="txtWallCount"
                                     Text="0 walls loaded" 
                                     Foreground="#808090" 
                                     FontSize="10"
                                     Margin="0,3,0,0"/>
                        </StackPanel>

                        <TextBlock x:Name="txtSelectedWallCount"
                                 Grid.Column="2"
                                 Text="0 selected" 
                                 Foreground="#1976D2" 
                                 FontSize="11"
                                 FontWeight="Bold"
                                 VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Filter and Selection Buttons -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="txtSearch"
                               Grid.Column="0"
                               Style="{StaticResource DarkTextBox}"
                               Height="32">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="2"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>

                        <Button x:Name="btnSelectAll"
                              Grid.Column="2"
                              Content="SELECT ALL"
                              Width="100"
                              Height="32"
                              Style="{StaticResource SecondaryButton}"/>

                        <Button x:Name="btnDeselectAll"
                              Grid.Column="4"
                              Content="CLEAR"
                              Width="80"
                              Height="32"
                              Style="{StaticResource SecondaryButton}"/>
                    </Grid>

                    <!-- Walls DataGrid -->
                    <DataGrid x:Name="dgWalls"
                            Grid.Row="4"
                            Style="{StaticResource DarkDataGrid}"
                            ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                            SelectionUnit="FullRow">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Header="✓" Width="40" Binding="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            <DataGridTextColumn Header="Wall ID" Width="80" Binding="{Binding WallId}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Comment" Width="150" Binding="{Binding Comment}" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#1976D2"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Type" Width="*" Binding="{Binding WallType}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Level" Width="100" Binding="{Binding Level}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Length (m)" Width="80" Binding="{Binding Length}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Hosted" Width="60" Binding="{Binding HostedCount}" IsReadOnly="True"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Info Message -->
                    <Border Grid.Row="6" Background="#1E1E28" CornerRadius="3" 
                            BorderBrush="#806020" BorderThickness="1" Padding="12">
                        <StackPanel>
                            <TextBlock Text="ℹ Assembly Naming" 
                                     Foreground="#1976D2" 
                                     FontWeight="SemiBold"
                                     FontSize="11"
                                     Margin="0,0,0,5"/>
                            <TextBlock Text="Each wall will create a separate assembly named from the wall's comment value." 
                                     FontSize="10" 
                                     Foreground="#B0B0C0"
                                     TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- FOOTER -->
        <Border Grid.Row="2" Background="#1E1E28" BorderBrush="#1976D2" BorderThickness="0,2,0,0">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock x:Name="txtStatus"
                             Text="Ready - Select a comment to start"
                             FontFamily="Segoe UI" 
                             FontSize="11" 
                             Foreground="#808090"/>
                    <TextBlock x:Name="txtHostedInfo"
                             Text="Hosted elements: Doors, Windows, Generic Models, Curtain Wall Mullions"
                             FontFamily="Segoe UI" 
                             FontSize="9" 
                             Foreground="#606070"
                             Margin="0,2,0,0"/>
                </StackPanel>

                <Button x:Name="btnCreateAssemblies" 
                        Grid.Column="1"
                        Content="CREATE ASSEMBLIES" 
                        Width="200" 
                        Height="40"
                        Style="{StaticResource PrimaryButton}"/>
            </Grid>
        </Border>

    </Grid>
</Window>
