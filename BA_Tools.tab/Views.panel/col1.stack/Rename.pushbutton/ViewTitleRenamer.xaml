<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BA_Tools" 
        Width="1100" Height="750"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#14141C">
    
    <Window.Resources>
        <!-- Primary Button Style (Blue) -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2196F3"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#404050"/>
                    <Setter Property="Foreground" Value="#707080"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style (Gray) -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#3C3C46"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4C4C56"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Dark Button Style -->
        <Style x:Key="DarkButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#2C2C36"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3C3C46"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="DarkTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#0A0A0F"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="BorderBrush" Value="#2C2C36"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="CaretBrush" Value="#DCDCDC"/>
        </Style>

        <!-- CheckBox Style -->
        <Style x:Key="DarkCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,3"/>
        </Style>

        <!-- Label Style -->
        <Style x:Key="HeaderLabel" TargetType="Label">
            <Setter Property="Foreground" Value="#808090"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="ValueLabel" TargetType="Label">
            <Setter Property="Foreground" Value="#B0B0C0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
    </Window.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="65"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#1E1E28" BorderBrush="#1976D2" BorderThickness="0,0,0,2">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo/Icon -->
                <Border Grid.Column="0" Background="#1976D2" CornerRadius="3" 
                        Width="45" Height="45" VerticalAlignment="Center">
                    <TextBlock Text="BA" FontSize="18" FontWeight="Bold" 
                             Foreground="White" HorizontalAlignment="Center" 
                             VerticalAlignment="Center" FontFamily="Segoe UI"/>
                </Border>

                <!-- Title -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0,0,0">
                    <TextBlock Text="VIEW TITLE RENAMER" FontSize="18" 
                             FontWeight="Bold" Foreground="White" FontFamily="Segoe UI"/>
                    <TextBlock Text="Rename view titles on sheets with find/replace, prefix &amp; suffix" 
                             FontSize="10" Foreground="#808090" FontFamily="Segoe UI" 
                             Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Close Button -->
                <Button x:Name="btnClose" Grid.Column="2" Content="Close" 
                        Style="{StaticResource SecondaryButton}" 
                        Width="85" Height="32" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1" Margin="15,15,15,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="580"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT PANEL: View Selection -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Filter and Selection Controls -->
                <Border Grid.Row="0" Background="#1E1E28" CornerRadius="3" 
                        BorderBrush="#2196F3" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="45"/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>

                        <!-- Filter Header -->
                        <Grid Grid.Row="0" Background="#252530">
                            <Grid Margin="15,0" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="ðŸ”¹" FontSize="14" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <TextBlock Text="Filter:" FontSize="11" FontWeight="SemiBold" 
                                             Foreground="#808090" VerticalAlignment="Center" 
                                             FontFamily="Segoe UI" Margin="0,0,10,0"/>
                                </StackPanel>
                                
                                <TextBox x:Name="txtViewFilter" Grid.Column="1" 
                                       Style="{StaticResource DarkTextBox}" 
                                       Height="28"/>
                            </Grid>
                        </Grid>

                        <!-- Action Buttons -->
                        <Grid Grid.Row="1" Margin="15,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="btnSelectAllViews" Content="Select All" 
                                    Style="{StaticResource PrimaryButton}" 
                                    Grid.Column="0" Width="100" Height="32" Margin="0,0,8,0"/>
                            <Button x:Name="btnClearAllViews" Content="Clear All" 
                                    Style="{StaticResource SecondaryButton}" 
                                    Grid.Column="1" Width="100" Height="32" Margin="0,0,8,0"/>
                            <Button x:Name="btnSelectFiltered" Content="Select Filtered" 
                                    Style="{StaticResource PrimaryButton}" 
                                    Grid.Column="2" Width="120" Height="32"/>
                            
                            <TextBlock x:Name="txtViewCount" Grid.Column="4" 
                                     Text="Selected: 0 / 0" 
                                     Foreground="#1976D2" FontFamily="Segoe UI" 
                                     FontSize="11" FontWeight="SemiBold"
                                     VerticalAlignment="Center"/>
                        </Grid>
                    </Grid>
                </Border>

                <!-- View List -->
                <Border Grid.Row="1" Background="#1E1E28" CornerRadius="3" 
                        BorderBrush="#2196F3" BorderThickness="1" Margin="0,10,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="lstViews" Margin="10">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding DisplayText}" 
                                            IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                            Style="{StaticResource DarkCheckBox}"
                                            Margin="5,2"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </Grid>

            <!-- RIGHT PANEL: Rename Options -->
            <Grid Grid.Column="1" Margin="10,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Options Panel -->
                <Border Grid.Row="0" Background="#1E1E28" CornerRadius="3" 
                        BorderBrush="#2196F3" BorderThickness="1">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Label Grid.Row="0" Content="CONFIGURE RENAME OPTIONS" 
                             Style="{StaticResource HeaderLabel}" Margin="0,5,0,15"/>

                        <!-- Find Text -->
                        <Grid Grid.Row="1" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Content="Find Text:" 
                                 Style="{StaticResource ValueLabel}" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtFind" Grid.Column="1" 
                                   Style="{StaticResource DarkTextBox}" Height="28"/>
                        </Grid>

                        <!-- Replace With -->
                        <Grid Grid.Row="2" Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Content="Replace With:" 
                                 Style="{StaticResource ValueLabel}" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtReplace" Grid.Column="1" 
                                   Style="{StaticResource DarkTextBox}" Height="28"/>
                        </Grid>

                        <!-- Checkboxes -->
                        <CheckBox x:Name="chkUseViewName" Grid.Row="3" 
                                Content="Use View Name instead of Current Title"
                                Style="{StaticResource DarkCheckBox}" Margin="0,0,0,8"/>
                        
                        <CheckBox x:Name="chkAddSheetNumber" Grid.Row="4" 
                                Content="Add Sheet Number as Prefix"
                                Style="{StaticResource DarkCheckBox}" Margin="0,0,0,15"/>

                        <!-- Prefix -->
                        <Grid Grid.Row="5" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Content="Custom Prefix:" 
                                 Style="{StaticResource ValueLabel}" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtPrefix" Grid.Column="1" 
                                   Style="{StaticResource DarkTextBox}" Height="28"/>
                        </Grid>

                        <!-- Suffix -->
                        <Grid Grid.Row="6" Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Content="Custom Suffix:" 
                                 Style="{StaticResource ValueLabel}" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtSuffix" Grid.Column="1" 
                                   Style="{StaticResource DarkTextBox}" Height="28"/>
                        </Grid>

                        <!-- Case Sensitive -->
                        <CheckBox x:Name="chkCaseSensitive" Grid.Row="7" 
                                Content="Case Sensitive Find/Replace"
                                Style="{StaticResource DarkCheckBox}"/>
                    </Grid>
                </Border>

                <!-- Preview Panel -->
                <Border Grid.Row="1" Background="#1E1E28" CornerRadius="3" 
                        BorderBrush="#2196F3" BorderThickness="1" Margin="0,10,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Border Grid.Row="0" Background="#252530" 
                                CornerRadius="3,3,0,0">
                            <Label Content="PREVIEW" 
                                 Style="{StaticResource HeaderLabel}" 
                                 VerticalAlignment="Center" Margin="15,0"/>
                        </Border>

                        <!-- Preview Content -->
                        <Border Grid.Row="1" Background="#0A0A0F" Margin="1" 
                                CornerRadius="0,0,2,2">
                            <TextBox x:Name="txtPreview" 
                                   Style="{StaticResource DarkTextBox}"
                                   BorderThickness="0"
                                   IsReadOnly="True"
                                   TextWrapping="Wrap"
                                   AcceptsReturn="True"
                                   VerticalScrollBarVisibility="Auto"
                                   FontFamily="Consolas"
                                   FontSize="10"
                                   Foreground="#64C864"
                                   Margin="10"
                                   Text="Select views and configure options to see preview..."/>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- FOOTER: Action Buttons -->
        <Border Grid.Row="2" Background="#1E1E28" BorderBrush="#2196F3" 
                BorderThickness="0,1,0,0" Padding="15,0">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="txtStatus" Grid.Column="0" 
                         Text="Ready to rename view titles on sheets" 
                         Foreground="#1976D2" FontFamily="Segoe UI" 
                         FontSize="11" VerticalAlignment="Center"/>

                <Button x:Name="btnApplyRename" Content="APPLY RENAME" 
                        Style="{StaticResource PrimaryButton}" 
                        Grid.Column="1" Width="220" Height="40"/>
            </Grid>
        </Border>
    </Grid>
</Window>
