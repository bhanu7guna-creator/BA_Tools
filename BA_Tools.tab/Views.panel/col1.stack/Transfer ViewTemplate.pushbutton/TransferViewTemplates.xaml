<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BA_Tools" 
        Width="950" Height="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#14141C"
        x:Name="MainWindow">
    
    <Window.Resources>
        <!-- Primary Button Style (Blue) -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2196F3"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#404050"/>
                    <Setter Property="Foreground" Value="#707080"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#3C3C46"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4C4C56"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- CheckBox Style -->
        <Style x:Key="DarkCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="checkBorder"
                                    Width="16" 
                                    Height="16" 
                                    Background="#0A0A0F"
                                    BorderBrush="#808090"
                                    BorderThickness="2"
                                    CornerRadius="2"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center">
                                <Path x:Name="checkMark"
                                      Data="M 0,4 L 3,7 L 8,0"
                                      Stroke="White"
                                      StrokeThickness="2"
                                      Visibility="Collapsed"
                                      Margin="1"/>
                            </Border>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="checkBorder" Property="Background" Value="#1976D2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="DarkTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#0A0A0F"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="BorderBrush" Value="#808090"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="CaretBrush" Value="#DCDCDC"/>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#0A0A0F"/>
            <Setter Property="Foreground" Value="#0A0A0F"/>
            <Setter Property="BorderBrush" Value="#1976D2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="8,5"/>
        </Style>

        <!-- ListBox Style -->
        <Style x:Key="DarkListBox" TargetType="ListBox">
            <Setter Property="Background" Value="#0A0A0F"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="BorderBrush" Value="#808090"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#1E1E28" BorderBrush="#1976D2" BorderThickness="0,0,0,2">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logo -->
                <Image x:Name="imgLogo" 
                       Grid.Column="0"
                       Width="40" 
                       Height="40"
                       VerticalAlignment="Center"
                       Stretch="Uniform"/>
                
                <!-- Title -->
                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock Text="TRANSFER VIEW TEMPLATES" 
                             FontFamily="Segoe UI" 
                             FontSize="16" 
                             FontWeight="Bold" 
                             Foreground="White"/>
                    <TextBlock Text="Copy view templates between projects" 
                             FontFamily="Segoe UI" 
                             FontSize="10" 
                             Foreground="#808090"
                             Margin="0,2,0,0"/>
                </StackPanel>
                
                <!-- Close Button -->
                <Button x:Name="btnClose" 
                        Grid.Column="3" 
                        Content="✕" 
                        Width="32" 
                        Height="32"
                        FontSize="16"
                        Style="{StaticResource SecondaryButton}"/>
            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1" Margin="20,20,20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT PANEL - Project Selection -->
            <Border Grid.Column="0" Background="#1E1E28" CornerRadius="3" 
                    BorderBrush="#1976D2" BorderThickness="1" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="15"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Title -->
                    <TextBlock Grid.Row="0" 
                             Text="PROJECT SELECTION" 
                             Foreground="#808090" 
                             FontSize="10" 
                             FontWeight="SemiBold"/>

                    <!-- Copy From -->
                    <TextBlock Grid.Row="2"
                             Text="Copy From:"
                             Foreground="#B0B0C0"
                             FontSize="11"
                             Margin="0,0,0,5"/>
                    
                    <ComboBox x:Name="cmbCopyFrom"
                            Grid.Row="4"
                            Height="35"
                            Style="{StaticResource DarkComboBox}"/>

                    <!-- Copy To -->
                    <TextBlock Grid.Row="6"
                             Text="Copy To:"
                             Foreground="#B0B0C0"
                             FontSize="11"
                             Margin="0,0,0,5"/>
                    
                    <ComboBox x:Name="cmbCopyTo"
                            Grid.Row="8"
                            Height="35"
                            Style="{StaticResource DarkComboBox}"/>

                    <!-- Override Option -->
                    <CheckBox x:Name="chkOverride"
                            Grid.Row="10"
                            Content="Override existing templates"
                            Style="{StaticResource DarkCheckBox}"
                            IsChecked="True"/>

                    <!-- Info Box -->
                    <Border Grid.Row="11" 
                            Background="#0A0A0F" 
                            BorderBrush="#1976D2" 
                            BorderThickness="1" 
                            CornerRadius="2" 
                            Padding="12"
                            VerticalAlignment="Bottom"
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="ℹ How it works" 
                                     Foreground="#1976D2" 
                                     FontWeight="SemiBold"
                                     FontSize="10"
                                     Margin="0,0,0,5"/>
                            <TextBlock TextWrapping="Wrap" 
                                     Foreground="#B0B0C0" 
                                     FontSize="9"
                                     LineHeight="14">
                                Select source and destination projects, then choose which view templates to transfer. 
                                <LineBreak/>
                                <LineBreak/>
                                Override: Replaces existing templates with same names and reassigns them to views.
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- RIGHT PANEL - View Templates -->
            <Border Grid.Column="2" Background="#1E1E28" CornerRadius="3" 
                    BorderBrush="#1976D2" BorderThickness="1" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Info Panel -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock x:Name="txtTemplateCount"
                                     Text="Select projects to load templates" 
                                     Foreground="#B0B0C0" 
                                     FontSize="12"
                                     FontWeight="SemiBold"/>
                            <TextBlock x:Name="txtSelectedCount"
                                     Text="0 templates selected" 
                                     Foreground="#1976D2" 
                                     FontSize="10"
                                     FontWeight="Bold"
                                     Margin="0,3,0,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Filter and Selection Buttons -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="txtFilter"
                               Grid.Column="0"
                               Style="{StaticResource DarkTextBox}"
                               Height="32"/>

                        <Button x:Name="btnSelectAll"
                              Grid.Column="2"
                              Content="SELECT ALL"
                              Width="100"
                              Height="32"
                              Style="{StaticResource SecondaryButton}"/>

                        <Button x:Name="btnSelectNone"
                              Grid.Column="4"
                              Content="CLEAR"
                              Width="80"
                              Height="32"
                              Style="{StaticResource SecondaryButton}"/>
                    </Grid>

                    <!-- Templates ListBox -->
                    <ListBox x:Name="lstTemplates"
                           Grid.Row="4"
                           Style="{StaticResource DarkListBox}"
                           SelectionMode="Multiple">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Style="{StaticResource DarkCheckBox}"
                                        IsChecked="{Binding IsSelected}"
                                        Margin="5,5">
                                    <TextBlock Text="{Binding Name}" 
                                             Foreground="#DCDCDC" 
                                             FontSize="11"/>
                                </CheckBox>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>

        <!-- FOOTER -->
        <Border Grid.Row="2" Background="#1E1E28" BorderBrush="#1976D2" BorderThickness="0,2,0,0">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="txtStatus"
                         Grid.Column="0"
                         Text="Ready - Select source and destination projects"
                         FontFamily="Segoe UI" 
                         FontSize="11" 
                         Foreground="#808090"
                         VerticalAlignment="Center"/>

                <Button x:Name="btnTransfer" 
                        Grid.Column="1"
                        Content="TRANSFER TEMPLATES" 
                        Width="200" 
                        Height="40"
                        Style="{StaticResource PrimaryButton}"
                        IsEnabled="False"/>
            </Grid>
        </Border>

    </Grid>
</Window>
