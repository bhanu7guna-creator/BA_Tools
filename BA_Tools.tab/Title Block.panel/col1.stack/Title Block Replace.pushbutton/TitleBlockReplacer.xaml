<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BA_Tools" 
        Width="900" Height="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#14141C">
    
    <Window.Resources>
        <!-- Primary Button Style (Blue) -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2196F3"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#404050"/>
                    <Setter Property="Foreground" Value="#707080"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style (Gray) -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#3C3C46"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4C4C56"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Danger Button Style (Red) -->
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#D32F2F"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E53935"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Dark Button Style -->
        <Style x:Key="DarkButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#2C2C36"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3C3C46"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#0A0A0F"/>
            <Setter Property="Foreground" Value="#0A0A0F"/>
            <Setter Property="BorderBrush" Value="#0A0A0F"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="8,5"/>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="DarkTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#0A0A0F"/>
            <Setter Property="Foreground" Value="#494747ff"/>
            <Setter Property="BorderBrush" Value="#494747ff"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="CaretBrush" Value="#DCDCDC"/>
        </Style>

        <!-- CheckBox Style -->
        <Style x:Key="DarkCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,3"/>
        </Style>

        <!-- Label Style -->
        <Style x:Key="HeaderLabel" TargetType="Label">
            <Setter Property="Foreground" Value="#808090"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="ValueLabel" TargetType="Label">
            <Setter Property="Foreground" Value="#B0B0C0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>

        <!-- RadioButton Style -->
        <Style x:Key="DarkRadioButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
    </Window.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="65"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#1E1E28" BorderBrush="#1976D2" BorderThickness="0,0,0,2">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo/Icon -->
                <Border Grid.Column="0" Background="#1976D2" CornerRadius="3" 
                        Width="45" Height="45" VerticalAlignment="Center">
                    <TextBlock Text="BA" FontSize="18" FontWeight="Bold" 
                             Foreground="White" HorizontalAlignment="Center" 
                             VerticalAlignment="Center" FontFamily="Segoe UI"/>
                </Border>

                <!-- Title -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0,0,0">
                    <TextBlock Text="TITLE BLOCK REPLACER" FontSize="18" 
                             FontWeight="Bold" Foreground="White" FontFamily="Segoe UI"/>
                    <TextBlock Text="Replace title blocks on selected sheets" 
                             FontSize="10" Foreground="#808090" FontFamily="Segoe UI" 
                             Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Close Button -->
                <Button x:Name="btnClose" Grid.Column="2" Content="Close" 
                        Style="{StaticResource SecondaryButton}" 
                        Width="85" Height="32" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1" Margin="15,15,15,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="360"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT PANEL: Title Block Selection -->
            <Border Grid.Column="0" Background="#1E1E28" CornerRadius="3" 
                    BorderBrush="#1976D2" BorderThickness="1" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Title Block Selection Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="15">
                        <StackPanel>
                            <!-- Family Selection -->
                            <Label Content="Title Block Family:" Style="{StaticResource ValueLabel}" 
                                 Margin="0,5,0,5"/>
                            <ComboBox x:Name="cmbFamily" Style="{StaticResource DarkComboBox}" 
                                    Margin="0,0,0,15"/>

                            <!-- Type Selection -->
                            <Label Content="Title Block Type:" Style="{StaticResource ValueLabel}" 
                                 Margin="0,0,0,5"/>
                            <ComboBox x:Name="cmbType" Style="{StaticResource DarkComboBox}" 
                                    Margin="0,0,0,15"/>

                            <!-- Separator -->
                            <Border Height="1" Background="#2C2C36" Margin="0,10,0,15"/>

                            <!-- Current Title Blocks Info -->
                            <Label Content="CURRENT TITLE BLOCKS ON SELECTED SHEETS" 
                                 Style="{StaticResource HeaderLabel}" Margin="0,0,0,8"/>
                            
                            <Border Background="#0A0A0F" BorderBrush="#2C2C36" 
                                  BorderThickness="1" CornerRadius="2" Height="280">
                                <TextBox x:Name="txtCurrentTitleBlocks" 
                                       Style="{StaticResource DarkTextBox}"
                                       BorderThickness="0"
                                       IsReadOnly="True"
                                       TextWrapping="Wrap"
                                       AcceptsReturn="True"
                                       VerticalScrollBarVisibility="Auto"
                                       Text="Select sheets to see current title blocks..."/>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- RIGHT PANEL: Sheet Selection -->
            <Grid Grid.Column="1" Margin="10,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Top Section -->
                <Border Grid.Row="0" Background="#1E1E28" CornerRadius="3" 
                        BorderBrush="#1976D2" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="45"/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>

                        <!-- Filter Header -->
                        <Grid Grid.Row="0" Background="#252530">
                            <Grid Margin="15,0" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="ðŸ”¹" FontSize="14" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <TextBlock Text="Filter:" FontSize="11" FontWeight="SemiBold" 
                                             Foreground="#fafafcff" VerticalAlignment="Center" 
                                             FontFamily="Segoe UI" Margin="0,0,10,0"/>
                                </StackPanel>
                                
                                <TextBox x:Name="txtSheetFilter" Grid.Column="1" 
                                       Style="{StaticResource DarkTextBox}" 
                                       Height="28"/>
                            </Grid>
                        </Grid>

                        <!-- Action Buttons -->
                        <Grid Grid.Row="1" Margin="15,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="btnSelectAllSheets" Content="Select All" 
                                    Style="{StaticResource PrimaryButton}" 
                                    Grid.Column="0" Width="100" Height="32" Margin="0,0,8,0"/>
                            <Button x:Name="btnClearAllSheets" Content="Clear All" 
                                    Style="{StaticResource SecondaryButton}" 
                                    Grid.Column="1" Width="100" Height="32" Margin="0,0,8,0"/>
                            <Button x:Name="btnSelectFiltered" Content="Select Filtered" 
                                    Style="{StaticResource PrimaryButton}" 
                                    Grid.Column="2" Width="120" Height="32"/>
                            
                            <TextBlock x:Name="txtSheetCount" Grid.Column="4" 
                                     Text="Selected: 0 / 0" 
                                     Foreground="#1976D2" FontFamily="Segoe UI" 
                                     FontSize="11" FontWeight="SemiBold"
                                     VerticalAlignment="Center"/>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Sheet List and Preview -->
                <Grid Grid.Row="1" Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="200"/>
                    </Grid.RowDefinitions>

                    <!-- Sheet CheckedListBox -->
                    <Border Grid.Row="0" Background="#1E1E28" CornerRadius="3" 
                            BorderBrush="#1976D2" BorderThickness="1">
                        <Grid>
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ItemsControl x:Name="lstSheets" Margin="10">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding DisplayText}" 
                                                    IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                    Style="{StaticResource DarkCheckBox}"
                                                    Margin="5,2"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>

                    <!-- Status/Log Panel -->
                    <Border Grid.Row="1" Background="#1E1E28" CornerRadius="3" 
                            BorderBrush="#1976D2" BorderThickness="1" Margin="0,10,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <Border Grid.Row="0" Background="#252530" 
                                    CornerRadius="3,3,0,0">
                                <Label Content="REPLACEMENT LOG" 
                                     Style="{StaticResource HeaderLabel}" 
                                     VerticalAlignment="Center" Margin="15,0"/>
                            </Border>

                            <!-- Log Content -->
                            <Border Grid.Row="1" Background="#0A0A0F" Margin="1" 
                                    CornerRadius="0,0,2,2">
                                <TextBox x:Name="txtLog" 
                                       Style="{StaticResource DarkTextBox}"
                                       BorderThickness="0"
                                       IsReadOnly="True"
                                       TextWrapping="Wrap"
                                       AcceptsReturn="True"
                                       VerticalScrollBarVisibility="Auto"
                                       FontFamily="Consolas"
                                       FontSize="10"
                                       Foreground="#808090"
                                       Margin="10"
                                       Text="â€¢ Select new title block family and type&#x0a;â€¢ Select sheets to update&#x0a;â€¢ Click REPLACE TITLE BLOCKS&#x0a;â€¢ Existing title blocks will be replaced&#x0a;â€¢ Position will be maintained"/>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>

        <!-- FOOTER: Action Buttons -->
        <Border Grid.Row="2" Background="#1E1E28" BorderBrush="#2C2C36" 
                BorderThickness="0,1,0,0" Padding="15,0">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="txtStatus" Grid.Column="0" 
                         Text="Ready to replace title blocks on sheets" 
                         Foreground="#1976D2" FontFamily="Segoe UI" 
                         FontSize="11" VerticalAlignment="Center"/>

                <Button x:Name="btnViewReport" Content="View Report" 
                        Style="{StaticResource DarkButton}" 
                        Grid.Column="1" Width="140" Height="40" Margin="0,0,10,0"/>
                <Button x:Name="btnReplace" Content="REPLACE TITLE BLOCKS" 
                        Style="{StaticResource PrimaryButton}" 
                        Grid.Column="2" Width="220" Height="40"/>
            </Grid>
        </Border>
    </Grid>
</Window>
