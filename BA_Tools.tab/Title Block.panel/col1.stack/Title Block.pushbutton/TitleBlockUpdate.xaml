<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TITLE BLOCK BATCH UPDATE" 
        Width="950" Height="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#14141C"
        x:Name="MainWindow">
    
    <Window.Resources>
        <!-- Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="2" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2196F3"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#404050"/>
                    <Setter Property="Foreground" Value="#707080"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#3C3C46"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4C4C56"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="GreenButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#388E3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4CAF50"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Text Styles -->
        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#B0B0C0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        
        <Style x:Key="DarkTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="BorderBrush" Value="#1976D2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Height" Value="30"/>
        </Style>

        <!-- IMPROVED CHECKBOX STYLE -->
        <Style x:Key="SheetCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#E0E0E8"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,3"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#1E1E28" BorderBrush="#1976D2" BorderThickness="0,0,0,2">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="BA" FontFamily="Segoe UI" FontSize="24" FontWeight="Bold" 
                           Foreground="White" Background="#1976D2" Padding="10,5" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock Text="TITLE BLOCK BATCH UPDATE" FontFamily="Segoe UI" FontSize="18" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Select multiple sheets and update title block parameters at once" FontFamily="Segoe UI" FontSize="10" Foreground="#808090" Margin="0,2,0,0"/>
                </StackPanel>
                <Button x:Name="btnClose" Grid.Column="3" Content="CLOSE" Width="80" Height="32" Style="{StaticResource SecondaryButton}"/>
            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT PANEL - Sheet Selection -->
            <Border Grid.Column="0" Background="#1E1E28" BorderBrush="#1976D2" BorderThickness="0,0,2,0" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Title -->
                    <TextBlock Grid.Row="0" Text="SELECT SHEETS" Foreground="#1976D2" FontFamily="Segoe UI" 
                               FontSize="14" FontWeight="Bold" Margin="0,0,0,12"/>

                    <!-- Filter -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,12">
                        <TextBlock Text="Filter:" Style="{StaticResource LabelText}"/>
                        <TextBox x:Name="txtSheetFilter" Style="{StaticResource DarkTextBox}" 
                                 ToolTip="Search by sheet number or name"/>
                    </StackPanel>

                    <!-- Selection Buttons -->
                    <Grid Grid.Row="2" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btnSelectAll" Grid.Column="0" Content="Select All" Height="28" Style="{StaticResource SecondaryButton}"/>
                        <Button x:Name="btnClearAll" Grid.Column="2" Content="Clear All" Height="28" Style="{StaticResource SecondaryButton}"/>
                        <TextBlock x:Name="txtSheetCount" Grid.Column="4" Text="0 / 0 selected" 
                                   Foreground="#B0B0C0" FontSize="10" VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Sheets List with IMPROVED VISIBILITY -->
                    <Border Grid.Row="3" Background="#0A0A0F" BorderBrush="#1976D2" BorderThickness="1" CornerRadius="2">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="lstSheets">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#2A2A38" BorderThickness="0,0,0,1" Padding="12,6">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#1A2A3A"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            
                                            <CheckBox Content="{Binding DisplayText}" 
                                                      IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                      Style="{StaticResource SheetCheckBox}"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Border>

            <!-- RIGHT PANEL - Parameter Inputs -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    
                    <!-- Title -->
                    <TextBlock Text="TITLE BLOCK PARAMETERS" Foreground="#1976D2" FontFamily="Segoe UI" 
                               FontSize="14" FontWeight="Bold" Margin="0,0,0,12"/>
                    
                    <TextBlock Text="Enter values for parameters you want to update. Leave blank to skip." 
                               Foreground="#B0B0C0" FontSize="10" Margin="0,0,0,20" TextWrapping="Wrap"/>

                    <!-- Parameter Grid -->
                    <Border Background="#1E1E28" BorderBrush="#1976D2" BorderThickness="1" CornerRadius="2" 
                            Padding="20" Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="12"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="12"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="12"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="12"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="12"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="12"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Drawn By -->
                            <StackPanel Grid.Row="0" Grid.Column="0">
                                <TextBlock Text="Drawn By:" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="txtDrawnBy" Style="{StaticResource DarkTextBox}" 
                                         ToolTip="Person who drew the sheet"/>
                            </StackPanel>

                            <!-- Checked By -->
                            <StackPanel Grid.Row="0" Grid.Column="2">
                                <TextBlock Text="Checked By:" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="txtCheckedBy" Style="{StaticResource DarkTextBox}"
                                         ToolTip="Person who checked the sheet"/>
                            </StackPanel>

                            <!-- Designed By -->
                            <StackPanel Grid.Row="2" Grid.Column="0">
                                <TextBlock Text="Designed By:" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="txtDesignedBy" Style="{StaticResource DarkTextBox}"
                                         ToolTip="Person who designed"/>
                            </StackPanel>

                            <!-- Approved By -->
                            <StackPanel Grid.Row="2" Grid.Column="2">
                                <TextBlock Text="Approved By:" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="txtApprovedBy" Style="{StaticResource DarkTextBox}"
                                         ToolTip="Person who approved"/>
                            </StackPanel>

                            <!-- Project Number -->
                            <StackPanel Grid.Row="4" Grid.Column="0">
                                <TextBlock Text="Project Number:" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="txtProjectNumber" Style="{StaticResource DarkTextBox}"
                                         ToolTip="Project identification number"/>
                            </StackPanel>

                            <!-- Project Name -->
                            <StackPanel Grid.Row="4" Grid.Column="2">
                                <TextBlock Text="Project Name:" Style="{StaticResource LabelText}"/>
                                <TextBox x:Name="txtProjectName" Style="{StaticResource DarkTextBox}"
                                         ToolTip="Project name"/>
                            </StackPanel>

                            <!-- Sheet Issue Date -->
                            <StackPanel Grid.Row="6" Grid.Column="0">
                                <TextBlock Text="Sheet Issue Date (dd-MM-yyyy):" Style="{StaticResource LabelText}"/>
                                <DatePicker x:Name="datePicker" 
                                            Background="#FFFFFF"
                                            Foreground="#000000"
                                            BorderBrush="#1976D2"
                                            BorderThickness="1"
                                            FontFamily="Segoe UI"
                                            FontSize="11"
                                            Height="30"
                                            ToolTip="Issue date for the sheets (format: dd-MM-yyyy)"/>
                            </StackPanel>

                            <!-- Clear Button -->
                            <Button x:Name="btnClearFields" Grid.Row="6" Grid.Column="2" 
                                    Content="Clear All Fields" 
                                    Height="30" 
                                    VerticalAlignment="Bottom"
                                    Style="{StaticResource SecondaryButton}"
                                    ToolTip="Clear all input fields"/>
                        </Grid>
                    </Border>

                    <!-- Instructions -->
                    <Border Background="#0A0A0F" BorderBrush="#1976D2" BorderThickness="1" CornerRadius="2" 
                            Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="â„¹ï¸ INSTRUCTIONS" Foreground="#1976D2" FontWeight="SemiBold" 
                                       FontSize="11" Margin="0,0,0,8"/>
                            <TextBlock Foreground="#B0B0C0" FontSize="10" TextWrapping="Wrap" LineHeight="16">
                                <Run Text="1. Select sheets from the list on the left"/>
                                <LineBreak/>
                                <Run Text="2. Fill in the parameters you want to update"/>
                                <LineBreak/>
                                <Run Text="3. Leave fields blank if you don't want to change them"/>
                                <LineBreak/>
                                <Run Text="4. Click 'UPDATE SHEETS' to apply changes"/>
                                <LineBreak/><LineBreak/>
                                <Run Text="Note: Only non-read-only parameters will be updated." FontStyle="Italic"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Preview Section -->
                    <Border Background="#1E1E28" BorderBrush="#1976D2" BorderThickness="1" CornerRadius="2" 
                            Padding="15">
                        <StackPanel>
                            <TextBlock Text="ðŸ“‹ SUMMARY" Foreground="#1976D2" FontWeight="SemiBold" 
                                       FontSize="11" Margin="0,0,0,8"/>
                            <TextBlock Foreground="#B0B0C0" FontSize="10" TextWrapping="Wrap">
                                <Run Text="Select sheets and fill parameters to see update summary"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- FOOTER -->
        <Border Grid.Row="2" Background="#1E1E28" BorderBrush="#1976D2" BorderThickness="0,2,0,0">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="txtStatus" Grid.Column="0" Text="Select sheets and enter parameters to update" 
                           FontFamily="Segoe UI" FontSize="11" Foreground="#808090" VerticalAlignment="Center"/>
                <Button x:Name="btnCancel" Grid.Column="2" Content="CANCEL" Width="100" Height="40" 
                        Style="{StaticResource SecondaryButton}"/>
                <Button x:Name="btnUpdate" Grid.Column="4" Content="UPDATE SHEETS" Width="180" Height="40" 
                        Style="{StaticResource GreenButton}" FontSize="12"/>
            </Grid>
        </Border>
    </Grid>
</Window>
