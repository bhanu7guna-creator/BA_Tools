<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BA_Tools - Title Block Update" 
        Width="1100" Height="750"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1A1A1A">

    <!-- Main Border with Blue Accent -->
    <Border BorderBrush="#0078D4" BorderThickness="3" Background="#1A1A1A">
        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Content -->
                <RowDefinition Height="80"/>
                <!-- Buttons -->
                <RowDefinition Height="35"/>
                <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- ========================================== -->
            <!-- HEADER -->
            <!-- ========================================== -->
            <Border Grid.Row="0" Background="#000000" BorderBrush="#0078D4" BorderThickness="0,0,0,2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- BA_Tools Logo -->
                    <Border Grid.Column="0" 
                            Background="#0078D4" 
                            Width="50" 
                            Height="50" 
                            CornerRadius="5"
                            Margin="10,5,15,5"
                            VerticalAlignment="Center">
                        <TextBlock Text="BA" 
                                   FontFamily="Segoe UI" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- Title -->
                    <TextBlock Grid.Column="1" 
                               Text="BA_Tools - Title Block Update" 
                               FontFamily="Segoe UI" 
                               FontSize="22" 
                               FontWeight="Bold" 
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="5,0,0,0"/>

                    <!-- Close Button -->
                    <Button Grid.Column="2" 
                            x:Name="btn_close"
                            Content="Close" 
                            Width="80" 
                            Height="30" 
                            Background="Transparent" 
                            Foreground="White" 
                            FontFamily="Segoe UI"
                            FontSize="12"
                            BorderBrush="#0078D4"
                            BorderThickness="1"
                            Margin="0,0,15,0"
                            VerticalAlignment="Center"
                            Cursor="Hand"/>
                </Grid>
            </Border>

            <!-- ========================================== -->
            <!-- MAIN CONTENT -->
            <!-- ========================================== -->
            <Grid Grid.Row="1" Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400"/>
                    <!-- Left Panel - Sheets -->
                    <ColumnDefinition Width="*"/>
                    <!-- Right Panel - Parameters -->
                </Grid.ColumnDefinitions>

                <!-- ========================================== -->
                <!-- LEFT PANEL - SHEET SELECTION -->
                <!-- ========================================== -->
                <Border Grid.Column="0" 
                        Background="#2D2D30" 
                        BorderBrush="#0078D4" 
                        BorderThickness="2"
                        CornerRadius="5"
                        Margin="0,0,10,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <!-- Search -->
                            <RowDefinition Height="*"/>
                            <!-- List -->
                            <RowDefinition Height="70"/>
                            <!-- Selection Buttons -->
                        </Grid.RowDefinitions>

                        <!-- Search Section -->
                        <Grid Grid.Row="0" Margin="15,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                       Text="ðŸ” Filter:" 
                                       FontFamily="Segoe UI" 
                                       FontSize="13" 
                                       Foreground="#0078D4"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                            <TextBox Grid.Column="1" 
                                     x:Name="txt_sheet_filter" 
                                     Height="30" 
                                     Background="#1A1A1A" 
                                     Foreground="White" 
                                     BorderBrush="#3F3F46"
                                     FontFamily="Segoe UI" 
                                     FontSize="12" 
                                     Padding="8,5"/>
                        </Grid>

                        <!-- Sheet ListBox -->
                        <Border Grid.Row="1" 
                                Background="#1A1A1A" 
                                BorderBrush="#3F3F46" 
                                BorderThickness="1"
                                Margin="10"
                                CornerRadius="3">
                            <ListBox x:Name="list_sheets" 
                                     Background="Transparent" 
                                     BorderThickness="0" 
                                     FontFamily="Segoe UI" 
                                     FontSize="12" 
                                     Foreground="White"
                                     SelectionMode="Multiple"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Padding" Value="8,6"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            Padding="{TemplateBinding Padding}"
                                                            Margin="2">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="25"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            <CheckBox Grid.Column="0" 
                                                                      IsChecked="{Binding IsSelected, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}" 
                                                                      VerticalAlignment="Center"/>
                                                            <ContentPresenter Grid.Column="1" 
                                                                              VerticalAlignment="Center"
                                                                              Margin="5,0,0,0"/>
                                                        </Grid>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#3F3F46"/>
                                                        </Trigger>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter Property="Background" Value="#0078D4"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>
                        </Border>

                        <!-- Selection Buttons -->
                        <Grid Grid.Row="2" Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                                <Button x:Name="btn_select_all_sheets" 
                                        Content="Select All" 
                                        Width="120" 
                                        Height="30"
                                        Background="#0078D4" 
                                        Foreground="White"
                                        FontFamily="Segoe UI"
                                        FontSize="11"
                                        FontWeight="Bold"
                                        BorderThickness="0"
                                        Margin="0,0,10,0"
                                        Cursor="Hand"/>
                                <Button x:Name="btn_clear_all_sheets" 
                                        Content="Clear All" 
                                        Width="120" 
                                        Height="30"
                                        Background="#3F3F46" 
                                        Foreground="White"
                                        FontFamily="Segoe UI"
                                        FontSize="11"
                                        FontWeight="Bold"
                                        BorderThickness="0"
                                        Cursor="Hand"/>
                            </StackPanel>

                            <TextBlock Grid.Row="1" 
                                       x:Name="txt_sheet_count" 
                                       Text="Selected: 0 / 0" 
                                       FontFamily="Segoe UI" 
                                       FontSize="11" 
                                       Foreground="#0078D4"
                                       HorizontalAlignment="Center"
                                       FontWeight="Bold"/>
                        </Grid>
                    </Grid>
                </Border>

                <!-- ========================================== -->
                <!-- RIGHT PANEL - PARAMETER INPUTS -->
                <!-- ========================================== -->
                <Border Grid.Column="1" 
                        Background="#2D2D30" 
                        BorderBrush="#0078D4" 
                        BorderThickness="2"
                        CornerRadius="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <!-- Header -->
                            <RowDefinition Height="*"/>
                            <!-- Parameters -->
                        </Grid.RowDefinitions>

                        <!-- Parameters Header -->
                        <Border Grid.Row="0" 
                                Background="#1A1A1A" 
                                BorderBrush="#3F3F46" 
                                BorderThickness="0,0,0,1">
                            <TextBlock Text="TITLE BLOCK PARAMETERS" 
                                       FontFamily="Segoe UI" 
                                       FontSize="13" 
                                       FontWeight="Bold" 
                                       Foreground="#0078D4"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Border>

                        <!-- Parameters Panel -->
                        <ScrollViewer Grid.Row="1" 
                                      VerticalScrollBarVisibility="Auto"
                                      Margin="15">
                            <StackPanel>
                                <!-- Drawn By -->
                                <StackPanel Margin="0,10,0,0">
                                    <TextBlock Text="Drawn By:" 
                                               FontFamily="Segoe UI" 
                                               FontSize="11" 
                                               Foreground="#AAAAAA"
                                               Margin="0,0,0,5"/>
                                    <TextBox x:Name="txt_drawn_by" 
                                             Height="32" 
                                             Background="#1A1A1A" 
                                             Foreground="White" 
                                             BorderBrush="#3F3F46"
                                             FontFamily="Segoe UI" 
                                             FontSize="12" 
                                             Padding="8,5"/>
                                </StackPanel>

                                <!-- Checked By -->
                                <StackPanel Margin="0,15,0,0">
                                    <TextBlock Text="Checked By:" 
                                               FontFamily="Segoe UI" 
                                               FontSize="11" 
                                               Foreground="#AAAAAA"
                                               Margin="0,0,0,5"/>
                                    <TextBox x:Name="txt_checked_by" 
                                             Height="32" 
                                             Background="#1A1A1A" 
                                             Foreground="White" 
                                             BorderBrush="#3F3F46"
                                             FontFamily="Segoe UI" 
                                             FontSize="12" 
                                             Padding="8,5"/>
                                </StackPanel>

                                <!-- Designed By -->
                                <StackPanel Margin="0,15,0,0">
                                    <TextBlock Text="Designed By:" 
                                               FontFamily="Segoe UI" 
                                               FontSize="11" 
                                               Foreground="#AAAAAA"
                                               Margin="0,0,0,5"/>
                                    <TextBox x:Name="txt_designed_by" 
                                             Height="32" 
                                             Background="#1A1A1A" 
                                             Foreground="White" 
                                             BorderBrush="#3F3F46"
                                             FontFamily="Segoe UI" 
                                             FontSize="12" 
                                             Padding="8,5"/>
                                </StackPanel>

                                <!-- Approved By -->
                                <StackPanel Margin="0,15,0,0">
                                    <TextBlock Text="Approved By:" 
                                               FontFamily="Segoe UI" 
                                               FontSize="11" 
                                               Foreground="#AAAAAA"
                                               Margin="0,0,0,5"/>
                                    <TextBox x:Name="txt_approved_by" 
                                             Height="32" 
                                             Background="#1A1A1A" 
                                             Foreground="White" 
                                             BorderBrush="#3F3F46"
                                             FontFamily="Segoe UI" 
                                             FontSize="12" 
                                             Padding="8,5"/>
                                </StackPanel>

                                <!-- Sheet Issue Date -->
                                <StackPanel Margin="0,15,0,0">
                                    <TextBlock Text="Sheet Issue Date:" 
                                               FontFamily="Segoe UI" 
                                               FontSize="11" 
                                               Foreground="#AAAAAA"
                                               Margin="0,0,0,5"/>
                                    <DatePicker x:Name="date_picker" 
                                                Height="32" 
                                                Background="#1A1A1A" 
                                                Foreground="White" 
                                                BorderBrush="#3F3F46"
                                                FontFamily="Segoe UI" 
                                                FontSize="12"/>
                                </StackPanel>

                                <!-- Project Number -->
                                <StackPanel Margin="0,15,0,0">
                                    <TextBlock Text="Project Number:" 
                                               FontFamily="Segoe UI" 
                                               FontSize="11" 
                                               Foreground="#AAAAAA"
                                               Margin="0,0,0,5"/>
                                    <TextBox x:Name="txt_project_number" 
                                             Height="32" 
                                             Background="#1A1A1A" 
                                             Foreground="White" 
                                             BorderBrush="#3F3F46"
                                             FontFamily="Segoe UI" 
                                             FontSize="12" 
                                             Padding="8,5"/>
                                </StackPanel>

                                <!-- Project Name -->
                                <StackPanel Margin="0,15,0,0">
                                    <TextBlock Text="Project Name:" 
                                               FontFamily="Segoe UI" 
                                               FontSize="11" 
                                               Foreground="#AAAAAA"
                                               Margin="0,0,0,5"/>
                                    <TextBox x:Name="txt_project_name" 
                                             Height="32" 
                                             Background="#1A1A1A" 
                                             Foreground="White" 
                                             BorderBrush="#3F3F46"
                                             FontFamily="Segoe UI" 
                                             FontSize="12" 
                                             Padding="8,5"/>
                                </StackPanel>

                                <!-- Client Name -->
                                <StackPanel Margin="0,15,0,0">
                                    <TextBlock Text="Client Name:" 
                                               FontFamily="Segoe UI" 
                                               FontSize="11" 
                                               Foreground="#AAAAAA"
                                               Margin="0,0,0,5"/>
                                    <TextBox x:Name="txt_client_name" 
                                             Height="32" 
                                             Background="#1A1A1A" 
                                             Foreground="White" 
                                             BorderBrush="#3F3F46"
                                             FontFamily="Segoe UI" 
                                             FontSize="12" 
                                             Padding="8,5"/>
                                </StackPanel>

                                <!-- Clear All Button -->
                                <Button x:Name="btn_clear_fields" 
                                        Content="Clear All Fields" 
                                        Height="35"
                                        Background="#505050" 
                                        Foreground="White"
                                        FontFamily="Segoe UI"
                                        FontSize="11"
                                        FontWeight="Bold"
                                        BorderThickness="0"
                                        Margin="0,25,0,20"
                                        Cursor="Hand"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>

            <!-- ========================================== -->
            <!-- ACTION BUTTONS -->
            <!-- ========================================== -->
            <Grid Grid.Row="2" Background="#000000" Margin="0">
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center">
                    <Button x:Name="btn_cancel" 
                            Content="Cancel" 
                            Width="200" 
                            Height="45"
                            Background="#505050" 
                            Foreground="White"
                            FontFamily="Segoe UI"
                            FontSize="13"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Margin="0,0,15,0"
                            Cursor="Hand"/>
                    <Button x:Name="btn_update" 
                            Content="Update Title Blocks" 
                            Width="300" 
                            Height="45"
                            Background="#0078D4" 
                            Foreground="White"
                            FontFamily="Segoe UI"
                            FontSize="13"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"/>
                </StackPanel>
            </Grid>

            <!-- ========================================== -->
            <!-- FOOTER -->
            <!-- ========================================== -->
            <Border Grid.Row="3" Background="#000000" BorderBrush="#0078D4" BorderThickness="0,2,0,0">
                <TextBlock Text="Fill in parameters and select sheets to update" 
                           FontFamily="Segoe UI" 
                           FontSize="11" 
                           Foreground="#0078D4"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontWeight="Bold"/>
            </Border>
        </Grid>
    </Border>

    <!-- ========================================== -->
    <!-- RESOURCES / STYLES -->
    <!-- ========================================== -->
    <Window.Resources>
        <!-- ScrollBar Style -->
        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="Width" Value="10"/>
        </Style>
        
        <!-- DatePicker Style -->
        <Style TargetType="DatePicker">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>
</Window>
