                                <StackPanel Margin="0,15,0,0">
                                    <TextBlock Text="Project Name:" 
                                               FontFamily="Segoe UI" 
                                               FontSize="11" 
                                               Foreground="#AAAAAA"
                                               Margin="0,0,0,5"/>
                                    <TextBox x:Name="txt_project_name" 
                                             Height="32" 
                                             Background="#1A1A1A" 
                                             Foreground="White" 
                                             BorderBrush="#3F3F46"
                                             FontFamily="Segoe UI" 
                                             FontSize="12" 
                                             Padding="8,5"/>
                                </StackPanel>

                                <!-- Client Name -->
                                <StackPanel Margin="0,15,0,0">
                                    <TextBlock Text="Client Name:" 
                                               FontFamily="Segoe UI" 
                                               FontSize="11" 
                                               Foreground="#AAAAAA"
                                               Margin="0,0,0,5"/>
                                    <TextBox x:Name="txt_client_name" 
                                             Height="32" 
                                             Background="#1A1A1A" 
                                             Foreground="White" 
                                             BorderBrush="#3F3F46"
                                             FontFamily="Segoe UI" 
                                             FontSize="12" 
                                             Padding="8,5"/>
                                </StackPanel>

                                <!-- Clear All Button -->
                                <Button x:Name="btn_clear_fields" 
                                        Content="Clear All Fields" 
                                        Height="35"
                                        Background="#505050" 
                                        Foreground="White"
                                        FontFamily="Segoe UI"
                                        FontSize="11"
                                        FontWeight="Bold"
                                        BorderThickness="0"
                                        Margin="0,25,0,20"
                                        Click="ClearAllFields"
                                        Cursor="Hand"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>

            <!-- ========================================== -->
            <!-- ACTION BUTTONS -->
            <!-- ========================================== -->
            <Grid Grid.Row="2" Background="#000000" Margin="0">
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center">
                    <Button x:Name="btn_cancel" 
                            Content="Cancel" 
                            Width="200" 
                            Height="45"
                            Background="#505050" 
                            Foreground="White"
                            FontFamily="Segoe UI"
                            FontSize="13"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Margin="0,0,15,0"
                            Click="CloseWindow"
                            Cursor="Hand"/>
                    <Button x:Name="btn_update" 
                            Content="Update Title Blocks" 
                            Width="300" 
                            Height="45"
                            Background="#0078D4" 
                            Foreground="White"
                            FontFamily="Segoe UI"
                            FontSize="13"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Click="UpdateTitleBlocks"
                            Cursor="Hand"/>
                </StackPanel>
            </Grid>

            <!-- ========================================== -->
            <!-- FOOTER -->
            <!-- ========================================== -->
            <Border Grid.Row="3" Background="#000000" BorderBrush="#0078D4" BorderThickness="0,2,0,0">
                <TextBlock Text="Fill in parameters and select sheets to update" 
                           FontFamily="Segoe UI" 
                           FontSize="11" 
                           Foreground="#0078D4"
