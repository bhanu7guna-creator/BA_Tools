<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BA_Tools" 
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#14141C">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2C2C34"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="#1976D2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#2C2C34"/>
            <Setter Property="Foreground" Value="#2C2C34"/>
            <Setter Property="BorderBrush" Value="#1976D2"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#2C2C34"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="RowBackground" Value="#2C2C34"/>
            <Setter Property="AlternatingRowBackground" Value="#3C3C44"/>
            <Setter Property="BorderBrush" Value="#1976D2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#444444"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#14141C"/>
        </Style>
        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="WALL STRUCTURAL STATUS MANAGER" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Foreground="#1976D2" 
                   Margin="0,0,0,15"/>
        
        <!-- Statistics Panel -->
        <Border Grid.Row="1" 
                Background="#2C2C34" 
                Padding="15" 
                Margin="0,0,0,15" 
                BorderBrush="#1976D2" 
                BorderThickness="2"
                CornerRadius="5">
            <TextBlock x:Name="StatsText" 
                       Foreground="White" 
                       FontSize="13"
                       TextWrapping="Wrap"/>
        </Border>
        
        <!-- Filters -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    Margin="0,0,0,15">
            <TextBlock Text="Filter:" 
                       Foreground="White" 
                       VerticalAlignment="Center" 
                       Margin="0,0,10,0"
                       FontSize="12"/>
            <ComboBox x:Name="FilterCombo" 
                      Width="180" 
                      Height="30"/>
            <TextBlock Text="Search:" 
                       Foreground="White" 
                       VerticalAlignment="Center" 
                       Margin="30,0,10,0"
                       FontSize="12"/>
            <TextBox x:Name="SearchBox" 
                     Width="250" 
                     Height="30"/>
        </StackPanel>
        
        <!-- Data Grid -->
        <DataGrid Grid.Row="3" 
                  x:Name="WallsGrid" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  SelectionMode="Extended"
                  IsReadOnly="False">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Select" 
                                        Binding="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                        Width="70"/>
                <DataGridTextColumn Header="ID" 
                                    Binding="{Binding Id}" 
                                    Width="90" 
                                    IsReadOnly="True"/>
                <DataGridTextColumn Header="Structural" 
                                    Binding="{Binding Structural}" 
                                    Width="100" 
                                    IsReadOnly="True"/>
                <DataGridTextColumn Header="Wall Type" 
                                    Binding="{Binding WallType}" 
                                    Width="*" 
                                    IsReadOnly="True"/>
                <DataGridTextColumn Header="Level" 
                                    Binding="{Binding Level}" 
                                    Width="120" 
                                    IsReadOnly="True"/>
                <DataGridTextColumn Header="Length (m)" 
                                    Binding="{Binding Length}" 
                                    Width="110" 
                                    IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Action Buttons -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,15,0,0">
            <Button x:Name="SelectAllBtn" 
                    Content="Select All" 
                    Width="100"/>
            <Button x:Name="DeselectAllBtn" 
                    Content="Deselect All" 
                    Width="100"/>
            <Button x:Name="MakeStructuralBtn" 
                    Content="Make STRUCTURAL" 
                    Width="150" 
                    Background="#4CAF50"/>
            <Button x:Name="MakeNonStructuralBtn" 
                    Content="Make NON-STRUCTURAL" 
                    Width="170" 
                    Background="#F44336"/>
            <Button x:Name="CloseBtn" 
                    Content="Close" 
                    Width="80"
                    Background="#666666"/>
        </StackPanel>
    </Grid>
</Window>
