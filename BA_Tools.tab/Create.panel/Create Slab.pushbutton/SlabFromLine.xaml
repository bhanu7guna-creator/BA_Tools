<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BA_Tools" 
        Width="500" Height="910"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#14141C"
        x:Name="MainWindow">
    
    <Window.Resources>
        <!-- Primary Button Style (Blue) -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2196F3"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#404050"/>
                    <Setter Property="Foreground" Value="#707080"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#3C3C46"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4C4C56"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="BorderBrush" Value="#1976D2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="28"/>
        </Style>

        <!-- TextBlock Style -->
        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#B0B0C0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#1E1E28" BorderBrush="#1976D2" BorderThickness="0,0,0,2">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logo -->
                <Image x:Name="imgLogo" 
                       Grid.Column="0"
                       Width="40" 
                       Height="40"
                       VerticalAlignment="Center"
                       Stretch="Uniform"/>
                
                <!-- Title -->
                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock Text="CREATE SLAB FROM LINE" 
                             FontFamily="Segoe UI" 
                             FontSize="16" 
                             FontWeight="Bold" 
                             Foreground="White"/>
                    <TextBlock Text="Select line type, slab type and dimensions" 
                             FontFamily="Segoe UI" 
                             FontSize="10" 
                             Foreground="#808090"
                             Margin="0,2,0,0"/>
                </StackPanel>
                
                <!-- Close Button -->
                <Button x:Name="btnClose" 
                        Grid.Column="3" 
                        Content="CLOSE" 
                        Width="70" 
                        Height="32"
                        FontSize="11"
                        Style="{StaticResource SecondaryButton}"/>
            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Border Background="#1E1E28" Margin="20,20,20,0" 
                    CornerRadius="3" BorderBrush="#1976D2" BorderThickness="1" Padding="25">
                <StackPanel>
                    <!-- Line Type Selection -->
                    <TextBlock Text="1. Select Line Type:" Style="{StaticResource LabelText}"/>
                    <ComboBox x:Name="cmbLineType" 
                            Style="{StaticResource DarkComboBox}"
                            Margin="0,0,0,20"/>

                    <!-- Slab Type Selection -->
                    <TextBlock Text="2. Select Slab Type:" Style="{StaticResource LabelText}"/>
                    <ComboBox x:Name="cmbSlabType" 
                            Style="{StaticResource DarkComboBox}"
                            Margin="0,0,0,20"/>

                    <!-- Level Selection -->
                    <TextBlock Text="3. Select Level:" Style="{StaticResource LabelText}"/>
                    <ComboBox x:Name="cmbLevel" 
                            Style="{StaticResource DarkComboBox}"
                            Margin="0,0,0,20"/>

                    <!-- Offset from Level -->
                    <TextBlock Text="4. Offset from Level:" Style="{StaticResource LabelText}"/>
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox x:Name="txtOffsetFeet"
                               Grid.Column="0"
                               Text="0"
                               Background="White"
                               Foreground="Black"
                               BorderBrush="#1976D2"
                               BorderThickness="1"
                               FontFamily="Segoe UI"
                               FontSize="11"
                               Padding="5"
                               Height="35"/>
                        
                        <TextBlock Grid.Column="2"
                                 Text="'"
                                 Foreground="#B0B0C0"
                                 FontSize="11"
                                 FontWeight="Bold"
                                 VerticalAlignment="Center"/>
                        
                        <TextBox x:Name="txtOffsetInches"
                               Grid.Column="4"
                               Text="0"
                               Background="White"
                               Foreground="Black"
                               BorderBrush="#1976D2"
                               BorderThickness="1"
                               FontFamily="Segoe UI"
                               FontSize="11"
                               Padding="5"
                               Height="35"/>
                        
                        <TextBlock Grid.Column="6"
                                 Text='inches (")'
                                 Foreground="#B0B0C0"
                                 FontSize="11"
                                 VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Left Width -->
                    <TextBlock Text="5. Left Width:" Style="{StaticResource LabelText}"/>
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox x:Name="txtLeftWidthFeet"
                               Grid.Column="0"
                               Text="5"
                               Background="White"
                               Foreground="Black"
                               BorderBrush="#1976D2"
                               BorderThickness="1"
                               FontFamily="Segoe UI"
                               FontSize="11"
                               Padding="5"
                               Height="35"/>
                        
                        <TextBlock Grid.Column="2"
                                 Text="'"
                                 Foreground="#B0B0C0"
                                 FontSize="11"
                                 FontWeight="Bold"
                                 VerticalAlignment="Center"/>
                        
                        <TextBox x:Name="txtLeftWidthInches"
                               Grid.Column="4"
                               Text="0"
                               Background="White"
                               Foreground="Black"
                               BorderBrush="#1976D2"
                               BorderThickness="1"
                               FontFamily="Segoe UI"
                               FontSize="11"
                               Padding="5"
                               Height="35"/>
                        
                        <TextBlock Grid.Column="6"
                                 Text="feet"
                                 Foreground="#B0B0C0"
                                 FontSize="11"
                                 VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Right Width -->
                    <TextBlock Text="6. Right Width:" Style="{StaticResource LabelText}"/>
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox x:Name="txtRightWidthFeet"
                               Grid.Column="0"
                               Text="5"
                               Background="White"
                               Foreground="Black"
                               BorderBrush="#1976D2"
                               BorderThickness="1"
                               FontFamily="Segoe UI"
                               FontSize="11"
                               Padding="5"
                               Height="35"/>
                        
                        <TextBlock Grid.Column="2"
                                 Text="'"
                                 Foreground="#B0B0C0"
                                 FontSize="11"
                                 FontWeight="Bold"
                                 VerticalAlignment="Center"/>
                        
                        <TextBox x:Name="txtRightWidthInches"
                               Grid.Column="4"
                               Text="0"
                               Background="White"
                               Foreground="Black"
                               BorderBrush="#1976D2"
                               BorderThickness="1"
                               FontFamily="Segoe UI"
                               FontSize="11"
                               Padding="5"
                               Height="35"/>
                        
                        <TextBlock Grid.Column="6"
                                 Text="feet"
                                 Foreground="#B0B0C0"
                                 FontSize="11"
                                 VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Split Slab Option -->
                    <Border Background="#0A0A0F" 
                            BorderBrush="#1976D2" 
                            BorderThickness="1" 
                            CornerRadius="2" 
                            Padding="12"
                            Margin="0,0,0,15">
                        <StackPanel>
                            <CheckBox x:Name="chkSplitSlab"
                                    Content="Split slab at intervals"
                                    Foreground="#DCDCDC"
                                    FontFamily="Segoe UI"
                                    FontSize="11"
                                    Margin="0,0,0,10"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0"
                                         Text="Interval:"
                                         Foreground="#B0B0C0"
                                         FontSize="11"
                                         VerticalAlignment="Center"
                                         IsEnabled="{Binding ElementName=chkSplitSlab, Path=IsChecked}"/>
                                
                                <TextBox x:Name="txtIntervalFeet"
                                       Grid.Column="2"
                                       Text="10"
                                       Background="White"
                                       Foreground="Black"
                                       BorderBrush="#1976D2"
                                       BorderThickness="1"
                                       FontFamily="Segoe UI"
                                       FontSize="11"
                                       Padding="5"
                                       Height="28"
                                       IsEnabled="{Binding ElementName=chkSplitSlab, Path=IsChecked}"/>
                                
                                <TextBlock Grid.Column="4"
                                         Text="'"
                                         Foreground="#B0B0C0"
                                         FontSize="11"
                                         FontWeight="Bold"
                                         VerticalAlignment="Center"
                                         IsEnabled="{Binding ElementName=chkSplitSlab, Path=IsChecked}"/>
                                
                                <TextBox x:Name="txtIntervalInches"
                                       Grid.Column="6"
                                       Text="0"
                                       Background="White"
                                       Foreground="Black"
                                       BorderBrush="#1976D2"
                                       BorderThickness="1"
                                       FontFamily="Segoe UI"
                                       FontSize="11"
                                       Padding="5"
                                       Height="28"
                                       IsEnabled="{Binding ElementName=chkSplitSlab, Path=IsChecked}"/>
                            </Grid>
                            
                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0"
                                         Text="Joint Gap:"
                                         Foreground="#B0B0C0"
                                         FontSize="11"
                                         VerticalAlignment="Center"
                                         IsEnabled="{Binding ElementName=chkSplitSlab, Path=IsChecked}"/>
                                
                                <TextBox x:Name="txtJointGap"
                                       Grid.Column="2"
                                       Text="0.5"
                                       Background="White"
                                       Foreground="Black"
                                       BorderBrush="#1976D2"
                                       BorderThickness="1"
                                       FontFamily="Segoe UI"
                                       FontSize="11"
                                       Padding="5"
                                       Height="28"
                                       IsEnabled="{Binding ElementName=chkSplitSlab, Path=IsChecked}"/>
                                
                                <TextBlock Grid.Column="4"
                                         Text='inches (")'
                                         Foreground="#B0B0C0"
                                         FontSize="11"
                                         VerticalAlignment="Center"
                                         IsEnabled="{Binding ElementName=chkSplitSlab, Path=IsChecked}"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Info Box -->
                    <Border Background="#0A0A0F" 
                            BorderBrush="#1976D2" 
                            BorderThickness="1" 
                            CornerRadius="2" 
                            Padding="12">
                        <StackPanel>
                            <TextBlock Text="â„¹ How it works" 
                                     Foreground="#1976D2" 
                                     FontWeight="SemiBold"
                                     FontSize="10"
                                     Margin="0,0,0,5"/>
                            <TextBlock TextWrapping="Wrap" 
                                     Foreground="#B0B0C0" 
                                     FontSize="9"
                                     LineHeight="14">
                                After clicking CREATE SLABS, select lines in Revit. 
                                Slabs will be created with the specified width on each side of the line.
                                <LineBreak/>
                                <LineBreak/>
                                <Run FontWeight="Bold">Left/Right Width:</Run> Distance from line to slab edge
                                <LineBreak/>
                                <Run FontWeight="Bold">Offset:</Run> Height above or below the selected level
                                <LineBreak/>
                                <Run FontWeight="Bold">Split Slabs:</Run> Divides long slabs into segments
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- FOOTER -->
        <Border Grid.Row="2" Background="#1E1E28" BorderBrush="#1976D2" BorderThickness="0,2,0,0">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="txtStatus"
                         Grid.Column="0"
                         Text="Ready - Configure settings and click CREATE SLABS"
                         FontFamily="Segoe UI" 
                         FontSize="11" 
                         Foreground="#808090"
                         VerticalAlignment="Center"/>

                <Button x:Name="btnCreateSlabs" 
                        Grid.Column="2"
                        Content="CREATE SLABS" 
                        Width="180" 
                        Height="40"
                        Style="{StaticResource PrimaryButton}"
                        ToolTip="Click to start slab creation. You will then select lines in Revit to create slabs from."/>
            </Grid>
        </Border>

    </Grid>
</Window>
