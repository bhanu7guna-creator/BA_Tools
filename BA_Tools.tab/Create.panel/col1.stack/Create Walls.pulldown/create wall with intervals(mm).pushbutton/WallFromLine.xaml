<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BA_Tools" 
        Width="500" Height="910"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#14141C"
        x:Name="MainWindow">
    
    <Window.Resources>
        <!-- Primary Button Style (Blue) -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2196F3"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#404050"/>
                    <Setter Property="Foreground" Value="#707080"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#3C3C46"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4C4C56"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="BorderBrush" Value="#1976D2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="30"/>
        </Style>

        <!-- TextBlock Style -->
        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#B0B0C0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#1E1E28" BorderBrush="#1976D2" BorderThickness="0,0,0,2">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logo -->
                <Image x:Name="imgLogo" 
                       Grid.Column="0"
                       Width="40" 
                       Height="40"
                       VerticalAlignment="Center"
                       Stretch="Uniform"/>
                
                <!-- Title -->
                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock Text="CREATE WALL FROM LINE" 
                             FontFamily="Segoe UI" 
                             FontSize="16" 
                             FontWeight="Bold" 
                             Foreground="White"/>
                    <TextBlock Text="Select line type, wall type and levels (Units: mm)" 
                             FontFamily="Segoe UI" 
                             FontSize="11" 
                             Foreground="#808090"
                             Margin="0,2,0,0"/>
                </StackPanel>
                
                <!-- Close Button -->
                <Button x:Name="btnClose" 
                        Grid.Column="3" 
                        Content="CLOSE" 
                        Width="70" 
                        Height="32"
                        FontSize="12"
                        Style="{StaticResource SecondaryButton}"/>
            </Grid>
        </Border>

        <!-- MAIN CONTENT WITH SCROLLVIEWER -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20,20,20,0">
            <Border Background="#1E1E28" 
                    CornerRadius="3" BorderBrush="#1976D2" BorderThickness="1" Padding="25">
                <StackPanel>
                    <!-- Line Type Selection -->
                    <TextBlock Text="1. Select Line Type:" Style="{StaticResource LabelText}"/>
                    <ComboBox x:Name="cmbLineType" 
                            Style="{StaticResource DarkComboBox}"
                            Margin="0,0,0,25"/>

                    <!-- Wall Type Selection -->
                    <TextBlock Text="2. Select Wall Type:" Style="{StaticResource LabelText}"/>
                    <ComboBox x:Name="cmbWallType" 
                            Style="{StaticResource DarkComboBox}"
                            Margin="0,0,0,25"/>

                    <!-- Base Level Selection -->
                    <TextBlock Text="3. Select Base Level (From):" Style="{StaticResource LabelText}"/>
                    <ComboBox x:Name="cmbBaseLevel" 
                            Style="{StaticResource DarkComboBox}"
                            Margin="0,0,0,10"/>
                    
                    <!-- Base Offset -->
                    <TextBlock Text="   Base Offset (mm):" 
                             Foreground="#B0B0C0"
                             FontFamily="Segoe UI"
                             FontSize="11"
                             Margin="0,0,0,5"/>
                    <TextBox x:Name="txtBaseOffset"
                           Text="0"
                           Background="White"
                           Foreground="Black"
                           BorderBrush="#1976D2"
                           BorderThickness="1"
                           FontFamily="Segoe UI"
                           FontSize="12"
                           Padding="5"
                           Height="30"
                           Margin="0,0,0,25"/>

                    <!-- Top Level Selection -->
                    <TextBlock Text="4. Select Top Level (To):" Style="{StaticResource LabelText}"/>
                    <ComboBox x:Name="cmbTopLevel" 
                            Style="{StaticResource DarkComboBox}"
                            Margin="0,0,0,10"/>
                    
                    <!-- Top Offset -->
                    <TextBlock Text="   Top Offset (mm):" 
                             Foreground="#B0B0C0"
                             FontFamily="Segoe UI"
                             FontSize="11"
                             Margin="0,0,0,5"/>
                    <TextBox x:Name="txtTopOffset"
                           Text="0"
                           Background="White"
                           Foreground="Black"
                           BorderBrush="#1976D2"
                           BorderThickness="1"
                           FontFamily="Segoe UI"
                           FontSize="12"
                           Padding="5"
                           Height="30"
                           Margin="0,0,0,25"/>

                    <!-- Wall Location Line -->
                    <TextBlock Text="5. Wall Location Line:" Style="{StaticResource LabelText}"/>
                    <ComboBox x:Name="cmbWallLocation" 
                            Style="{StaticResource DarkComboBox}"
                            Margin="0,0,0,25">
                        <ComboBoxItem Content="Wall Centerline" IsSelected="True"/>
                        <ComboBoxItem Content="Finish Face: Exterior"/>
                        <ComboBoxItem Content="Finish Face: Interior"/>
                        <ComboBoxItem Content="Core Centerline"/>
                        <ComboBoxItem Content="Core Face: Exterior"/>
                        <ComboBoxItem Content="Core Face: Interior"/>
                    </ComboBox>

                    <!-- Split Wall Option -->
                    <Border Background="#0A0A0F" 
                            BorderBrush="#1976D2" 
                            BorderThickness="1" 
                            CornerRadius="2" 
                            Padding="15"
                            Margin="0,0,0,15">
                        <StackPanel>
                            <CheckBox x:Name="chkSplitWall"
                                    Content="Split wall at intervals"
                                    Foreground="#DCDCDC"
                                    FontFamily="Segoe UI"
                                    FontSize="12"
                                    Margin="0,0,0,10"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0"
                                         Text="Interval:"
                                         Foreground="#B0B0C0"
                                         FontSize="12"
                                         VerticalAlignment="Center"
                                         IsEnabled="{Binding ElementName=chkSplitWall, Path=IsChecked}"/>
                                
                                <TextBox x:Name="txtInterval"
                                       Grid.Column="2"
                                       Text="3000"
                                       Background="White"
                                       Foreground="Black"
                                       BorderBrush="#1976D2"
                                       BorderThickness="1"
                                       FontFamily="Segoe UI"
                                       FontSize="12"
                                       Padding="5"
                                       Height="28"
                                       IsEnabled="{Binding ElementName=chkSplitWall, Path=IsChecked}"/>
                                
                                <TextBlock Grid.Column="4"
                                         Text="mm"
                                         Foreground="#B0B0C0"
                                         FontSize="12"
                                         FontWeight="Bold"
                                         VerticalAlignment="Center"
                                         IsEnabled="{Binding ElementName=chkSplitWall, Path=IsChecked}"/>
                            </Grid>
                            
                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0"
                                         Text="Joint Gap:"
                                         Foreground="#B0B0C0"
                                         FontSize="12"
                                         VerticalAlignment="Center"
                                         IsEnabled="{Binding ElementName=chkSplitWall, Path=IsChecked}"/>
                                
                                <TextBox x:Name="txtJointGap"
                                       Grid.Column="2"
                                       Text="16"
                                       Background="White"
                                       Foreground="Black"
                                       BorderBrush="#1976D2"
                                       BorderThickness="1"
                                       FontFamily="Segoe UI"
                                       FontSize="12"
                                       Padding="5"
                                       Height="28"
                                       IsEnabled="{Binding ElementName=chkSplitWall, Path=IsChecked}"/>
                                
                                <TextBlock Grid.Column="4"
                                         Text="mm"
                                         Foreground="#B0B0C0"
                                         FontSize="11"
                                         VerticalAlignment="Center"
                                         IsEnabled="{Binding ElementName=chkSplitWall, Path=IsChecked}"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Info Box -->
                    <Border Background="#0A0A0F" 
                            BorderBrush="#1976D2" 
                            BorderThickness="1" 
                            CornerRadius="2" 
                            Padding="12"
                            Margin="0,0,0,0">
                        <StackPanel>
                            <TextBlock Text="â„¹ How it works" 
                                     Foreground="#1976D2" 
                                     FontWeight="SemiBold"
                                     FontSize="10"
                                     Margin="0,0,0,5"/>
                            <TextBlock TextWrapping="Wrap" 
                                     Foreground="#B0B0C0" 
                                     FontSize="9"
                                     LineHeight="14">
                                After clicking CREATE WALLS, select lines in Revit. 
                                Walls will be created from base to top level.
                                <LineBreak/>
                                <LineBreak/>
                                <Run FontWeight="Bold">Units:</Run> All measurements are in millimeters (mm)
                                <LineBreak/>
                                <Run FontWeight="Bold">Base/Top Offset:</Run> Adjust wall height above/below levels
                                <LineBreak/>
                                <Run FontWeight="Bold">Interval:</Run> Distance between wall segments (e.g., 3000 mm)
                                <LineBreak/>
                                <Run FontWeight="Bold">Joint Gap:</Run> Space between segments (e.g., 16 mm)
                                <LineBreak/>
                                <Run FontWeight="Bold">Wall Location:</Run> Controls how the wall aligns to the line
                                <LineBreak/>
                                <Run FontWeight="Bold">Split Walls:</Run> Divides long walls into segments at specified intervals
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- FOOTER -->
        <Border Grid.Row="2" Background="#1E1E28" BorderBrush="#1976D2" BorderThickness="0,2,0,0">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="txtStatus"
                         Grid.Column="0"
                         Text="Ready - Configure settings and click CREATE WALLS"
                         FontFamily="Segoe UI" 
                         FontSize="11" 
                         Foreground="#808090"
                         VerticalAlignment="Center"/>

                <Button x:Name="btnCreateWalls" 
                        Grid.Column="2"
                        Content="CREATE WALLS" 
                        Width="180" 
                        Height="40"
                        Style="{StaticResource PrimaryButton}"
                        ToolTip="Click to start wall creation. You will then select lines in Revit to create walls from."/>
            </Grid>
        </Border>

    </Grid>
</Window>
