<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BA_Tools" 
        Width="560" Height="720"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#14141C">
    
    <Window.Resources>
        <!-- Primary Button Style (Blue) -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2196F3"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#404050"/>
                    <Setter Property="Foreground" Value="#707080"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style (Gray) -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#3C3C46"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4C4C56"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Label Style -->
        <Style x:Key="HeaderLabel" TargetType="Label">
            <Setter Property="Foreground" Value="#808090"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="65"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#1E1E28" BorderBrush="#1976D2" BorderThickness="0,0,0,2">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo/Icon -->
                <Border Grid.Column="0" Background="#1976D2" CornerRadius="3" 
                        Width="45" Height="45" VerticalAlignment="Center">
                    <TextBlock Text="BA" FontSize="18" FontWeight="Bold" 
                             Foreground="White" HorizontalAlignment="Center" 
                             VerticalAlignment="Center" FontFamily="Segoe UI"/>
                </Border>

                <!-- Title -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0,0,0">
                    <TextBlock Text="WORKSET CREATOR" FontSize="18" 
                             FontWeight="Bold" Foreground="White" FontFamily="Segoe UI"/>
                    <TextBlock Text="Create multiple worksets from predefined list" 
                             FontSize="10" Foreground="#808090" FontFamily="Segoe UI" 
                             Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Close Button -->
                <Button x:Name="btnClose" Grid.Column="2" Content="Close" 
                        Style="{StaticResource SecondaryButton}" 
                        Width="85" Height="32" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1" Margin="20,20,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Info Panel -->
            <Border Grid.Row="0" Background="#1E1E28" CornerRadius="3" 
                    BorderBrush="#1976D2" BorderThickness="1" Padding="15" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="ℹ️" FontSize="20" 
                             VerticalAlignment="Center" Margin="0,0,10,0"/>
                    
                    <StackPanel Grid.Column="1">
                        <TextBlock x:Name="txtExistingCount" 
                                 Text="Existing: 0 worksets" 
                                 Foreground="#808090" 
                                 FontFamily="Segoe UI" 
                                 FontSize="10"/>
                        <TextBlock x:Name="txtAvailableCount" 
                                 Text="Available to create: 0 worksets" 
                                 Foreground="#1976D2" 
                                 FontFamily="Segoe UI" 
                                 FontSize="10" 
                                 FontWeight="SemiBold"
                                 Margin="0,2,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Selection Buttons -->
            <Grid Grid.Row="1" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btnSelectAll" Content="Select All" 
                        Style="{StaticResource PrimaryButton}" 
                        Grid.Column="0" Width="100" Height="32" Margin="0,0,8,0"/>
                <Button x:Name="btnClearAll" Content="Clear All" 
                        Style="{StaticResource SecondaryButton}" 
                        Grid.Column="1" Width="100" Height="32"/>
                
                <TextBlock x:Name="txtSelectedCount" Grid.Column="3" 
                         Text="0 / 0 selected" 
                         Foreground="#1976D2" FontFamily="Segoe UI" 
                         FontSize="11" FontWeight="SemiBold"
                         VerticalAlignment="Center"/>
            </Grid>

            <!-- Workset List -->
            <Border Grid.Row="2" Background="#1E1E28" CornerRadius="3" 
                    BorderBrush="#1976D2" BorderThickness="1">
                <Border Background="#0A0A0F" Margin="1" CornerRadius="2">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="lstWorksets" Margin="10">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding DisplayText}" 
                                            IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                            Foreground="#DCDCDC"
                                            FontFamily="Segoe UI"
                                            FontSize="11"
                                            Margin="4,3"
                                            Padding="8,4">
                                        <CheckBox.Style>
                                            <Style TargetType="CheckBox">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="CheckBox">
                                                            <StackPanel Orientation="Horizontal">
                                                                <!-- Custom CheckBox -->
                                                                <Border x:Name="checkBorder"
                                                                        Width="18" 
                                                                        Height="18" 
                                                                        Background="#0A0A0F"
                                                                        BorderBrush="#808090"
                                                                        BorderThickness="2"
                                                                        CornerRadius="2"
                                                                        Margin="0,0,8,0"
                                                                        VerticalAlignment="Center">
                                                                    <Path x:Name="checkMark"
                                                                          Data="M 0,4 L 4,8 L 10,0"
                                                                          Stroke="White"
                                                                          StrokeThickness="2"
                                                                          Visibility="Collapsed"
                                                                          Margin="2"/>
                                                                </Border>
                                                                <!-- Content -->
                                                                <ContentPresenter VerticalAlignment="Center"/>
                                                            </StackPanel>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsChecked" Value="True">
                                                                    <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                                                                    <Setter TargetName="checkBorder" Property="Background" Value="#1976D2"/>
                                                                </Trigger>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="checkBorder" Property="BorderBrush" Value="#2196F3"/>
                                                                    <Setter Property="Foreground" Value="White"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </CheckBox.Style>
                                    </CheckBox>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </Border>

            <!-- Warning Message (if no worksets available) -->
            <Border x:Name="borderNoWorksets" Grid.Row="2" 
                    Background="#2C2C36" CornerRadius="3" 
                    BorderBrush="#FFA500" BorderThickness="2"
                    Padding="20"
                    Visibility="Collapsed">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="⚠️" FontSize="48" 
                             HorizontalAlignment="Center" 
                             Margin="0,0,0,10"/>
                    <TextBlock Text="All worksets already exist" 
                             FontSize="16" FontWeight="Bold"
                             Foreground="White" 
                             HorizontalAlignment="Center"
                             Margin="0,0,0,5"/>
                    <TextBlock Text="No new worksets available to create" 
                             FontSize="11" 
                             Foreground="#808090" 
                             HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- FOOTER: Action Buttons -->
        <Border Grid.Row="2" Background="#1E1E28" BorderBrush="#2C2C36" 
                BorderThickness="0,1,0,0" Padding="20,0">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="txtStatus" Grid.Column="0" 
                         Text="Select worksets to create" 
                         Foreground="#1976D2" FontFamily="Segoe UI" 
                         FontSize="11" VerticalAlignment="Center"/>

                <Button x:Name="btnCancel" Content="Cancel" 
                        Style="{StaticResource SecondaryButton}" 
                        Grid.Column="1" Width="120" Height="40" Margin="0,0,10,0"/>
                <Button x:Name="btnCreate" Content="CREATE WORKSETS" 
                        Style="{StaticResource PrimaryButton}" 
                        Grid.Column="2" Width="200" Height="40"/>
            </Grid>
        </Border>
    </Grid>
</Window>
