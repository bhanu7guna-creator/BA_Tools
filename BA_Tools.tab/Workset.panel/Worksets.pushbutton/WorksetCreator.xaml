<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BA_Tools" 
        Width="650" Height="920"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#14141C"
        x:Name="MainWindow">
    
    <Window.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="2" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2196F3"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#404050"/>
                    <Setter Property="Foreground" Value="#707080"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#3C3C46"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4C4C56"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="GreenButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#1976D2"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#B0B0C0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        
        <Style x:Key="DarkTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="BorderBrush" Value="#1976D2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Height" Value="30"/>
        </Style>

        <Style x:Key="ItemCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#E0E0E8"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,3"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#1E1E28" BorderBrush="#1976D2" BorderThickness="0,0,0,2">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="BA" FontFamily="Segoe UI" FontSize="24" FontWeight="Bold" 
                           Foreground="White" Background="#1976D2" Padding="10,5" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock Text="WORKSET CREATOR" FontFamily="Segoe UI" FontSize="18" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Create multiple worksets from predefined list or custom names" FontFamily="Segoe UI" FontSize="10" Foreground="#808090" Margin="0,2,0,0"/>
                </StackPanel>
                <Button x:Name="btnClose" Grid.Column="3" Content="CLOSE" Width="80" Height="32" Style="{StaticResource SecondaryButton}"/>
            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                
                <!-- Info Panel -->
                <TextBlock Text="PROJECT INFORMATION" Foreground="#1976D2" FontFamily="Segoe UI" 
                           FontSize="14" FontWeight="Bold" Margin="0,0,0,12"/>
                
                <Border Background="#1E1E28" BorderBrush="#1976D2" BorderThickness="1" CornerRadius="2" 
                        Padding="20" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Existing Worksets:" Style="{StaticResource LabelText}"/>
                            <TextBlock x:Name="txtExistingCount" Text="0" Foreground="White" 
                                       FontFamily="Segoe UI" FontSize="24" FontWeight="Bold"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Available to Create:" Style="{StaticResource LabelText}"/>
                            <TextBlock x:Name="txtAvailableCount" Text="0" Foreground="#1976D2" 
                                       FontFamily="Segoe UI" FontSize="24" FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Custom Workset Input -->
                <TextBlock Text="ADD CUSTOM WORKSET" Foreground="#1976D2" FontFamily="Segoe UI" 
                           FontSize="14" FontWeight="Bold" Margin="0,0,0,12"/>
                
                <Border Background="#1E1E28" BorderBrush="#1976D2" BorderThickness="1" CornerRadius="2" 
                        Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Type a custom workset name:" Style="{StaticResource LabelText}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="txtCustomWorkset" Grid.Column="0" Style="{StaticResource DarkTextBox}" 
                                     ToolTip="Enter custom workset name and press Enter or click Add"/>
                            <Button x:Name="btnAddCustom" Grid.Column="2" Content="+ ADD" Height="30" Style="{StaticResource PrimaryButton}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Predefined Worksets -->
                <TextBlock Text="PREDEFINED WORKSETS" Foreground="#1976D2" FontFamily="Segoe UI" 
                           FontSize="14" FontWeight="Bold" Margin="0,0,0,12"/>

                <!-- Selection Buttons -->
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnSelectAll" Grid.Column="0" Content="Select All" Height="28" Style="{StaticResource SecondaryButton}"/>
                    <Button x:Name="btnClearAll" Grid.Column="2" Content="Clear All" Height="28" Style="{StaticResource SecondaryButton}"/>
                    <TextBlock x:Name="txtSelectedCount" Grid.Column="4" Text="0 / 0" 
                               Foreground="#B0B0C0" FontSize="10" VerticalAlignment="Center"/>
                </Grid>

                <!-- Worksets List -->
                <Border Background="#0A0A0F" BorderBrush="#1976D2" BorderThickness="1" CornerRadius="2" 
                        Height="350" Margin="0,0,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="lstWorksets">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#2A2A38" BorderThickness="0,0,0,1" Padding="12,6">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#1A2A3A"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <CheckBox Content="{Binding DisplayText}" 
                                                  IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                  Style="{StaticResource ItemCheckBox}"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>

                <!-- Warning Message (if no worksets available) -->
                <Border x:Name="borderNoWorksets" 
                        Background="#2C2C36" CornerRadius="2" 
                        BorderBrush="#FFA500" BorderThickness="2"
                        Padding="30" Margin="0,20,0,0"
                        Visibility="Collapsed">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="âš " FontSize="48" 
                                 HorizontalAlignment="Center" 
                                 Margin="0,0,0,10"/>
                        <TextBlock Text="All predefined worksets exist" 
                                 FontSize="14" FontWeight="Bold"
                                 Foreground="White" 
                                 HorizontalAlignment="Center"
                                 Margin="0,0,0,5"/>
                        <TextBlock Text="Use custom input above to add new worksets" 
                                 FontSize="11" 
                                 Foreground="#808090" 
                                 HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- FOOTER -->
        <Border Grid.Row="2" Background="#1E1E28" BorderBrush="#1976D2" BorderThickness="0,2,0,0">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="txtStatus" Grid.Column="0" Text="Select worksets or add custom names to begin" 
                           FontFamily="Segoe UI" FontSize="11" Foreground="#808090" VerticalAlignment="Center"/>
                <Button x:Name="btnCancel" Grid.Column="2" Content="CANCEL" Width="100" Height="40" Style="{StaticResource SecondaryButton}"/>
                <Button x:Name="btnCreate" Grid.Column="4" Content="CREATE WORKSETS" Width="180" Height="40" 
                        Style="{StaticResource GreenButton}" FontSize="12"/>
            </Grid>
        </Border>
    </Grid>
</Window>
