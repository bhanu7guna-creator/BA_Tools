<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BA_Tools" 
        Width="900" Height="750"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#14141C">
    
    <Window.Resources>
        <!-- Primary Button Style (Blue) -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2196F3"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#404050"/>
                    <Setter Property="Foreground" Value="#707080"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style (Gray) -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#3C3C46"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4C4C56"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#0A0A0F"/>
            <Setter Property="Foreground" Value="#0A0A0F"/>
            <Setter Property="BorderBrush" Value="#1976D2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="8,5"/>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="DarkTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#0A0A0F"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="BorderBrush" Value="#1976D2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="CaretBrush" Value="#DCDCDC"/>
        </Style>

        <!-- Label Style -->
        <Style x:Key="HeaderLabel" TargetType="Label">
            <Setter Property="Foreground" Value="#808090"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="ValueLabel" TargetType="Label">
            <Setter Property="Foreground" Value="#B0B0C0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
    </Window.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#1E1E28" BorderBrush="#1976D2" BorderThickness="0,0,0,2">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo/Icon -->
                <Border Grid.Column="0" Background="#1976D2" CornerRadius="3" 
                        Width="45" Height="45" VerticalAlignment="Center">
                    <TextBlock Text="BA" FontSize="18" FontWeight="Bold" 
                             Foreground="White" HorizontalAlignment="Center" 
                             VerticalAlignment="Center" FontFamily="Segoe UI"/>
                </Border>

                <!-- Title -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0,0,0">
                    <TextBlock Text="MARK VALUE MANAGER" FontSize="18" 
                             FontWeight="Bold" Foreground="White" FontFamily="Segoe UI"/>
                    <TextBlock Text="Assign mark values by category, level, and type" 
                             FontSize="10" Foreground="#808090" FontFamily="Segoe UI" 
                             Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Close Button -->
                <Button x:Name="btnClose" Grid.Column="2" Content="Close" 
                        Style="{StaticResource SecondaryButton}" 
                        Width="85" Height="32" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1" Margin="20,20,20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="450"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT PANEL: Element Selection -->
            <Border Grid.Column="0" Background="#1E1E28" CornerRadius="3" 
                    BorderBrush="#1976D2" BorderThickness="1" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- STEP 1: Category -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                        <Label Content="STEP 1: SELECT CATEGORY" Style="{StaticResource HeaderLabel}"/>
                        <ComboBox x:Name="cmbCategory" Style="{StaticResource DarkComboBox}" Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- STEP 2: Level -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,15">
                        <Label Content="STEP 2: SELECT LEVEL" Style="{StaticResource HeaderLabel}"/>
                        <ComboBox x:Name="cmbLevel" Style="{StaticResource DarkComboBox}" Margin="0,5,0,0" IsEnabled="False"/>
                    </StackPanel>

                    <!-- STEP 3: Type -->
                    <StackPanel Grid.Row="2" Margin="0,0,0,15">
                        <Label Content="STEP 3: SELECT TYPE" Style="{StaticResource HeaderLabel}"/>
                        <ComboBox x:Name="cmbType" Style="{StaticResource DarkComboBox}" Margin="0,5,0,0" IsEnabled="False"/>
                    </StackPanel>

                    <!-- Element Info -->
                    <Grid Grid.Row="3" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="SELECTED ELEMENTS" Style="{StaticResource HeaderLabel}" VerticalAlignment="Center"/>
                        <TextBlock x:Name="txtElementCount" Grid.Column="1" Text="0 elements" 
                                 Foreground="#1976D2" FontFamily="Segoe UI" FontSize="11" 
                                 FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Element List -->
                    <Border Grid.Row="4" Background="#0A0A0F" BorderBrush="#2C2C36" BorderThickness="1" CornerRadius="2">
                        <TextBox x:Name="txtElementInfo" 
                               Style="{StaticResource DarkTextBox}"
                               BorderThickness="0"
                               IsReadOnly="True"
                               TextWrapping="NoWrap"
                               AcceptsReturn="True"
                               VerticalScrollBarVisibility="Auto"
                               HorizontalScrollBarVisibility="Auto"
                               FontFamily="Consolas"
                               FontSize="10"
                               Foreground="#808090"
                               Text="Select category > level > type"/>
                    </Border>
                </Grid>
            </Border>

            <!-- RIGHT PANEL: Comment Assignment -->
            <Border Grid.Column="1" Background="#1E1E28" CornerRadius="3" 
                    BorderBrush="#1976D2" BorderThickness="1" Margin="10,0,0,0" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- STEP 4: Method Selection -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                        <Label Content="STEP 4: ASSIGN MARKS" Style="{StaticResource HeaderLabel}"/>
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Content="Method:" Style="{StaticResource ValueLabel}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox x:Name="cmbMethod" Grid.Column="1" Style="{StaticResource DarkComboBox}"/>
                        </Grid>
                    </StackPanel>

                    <!-- Input Container -->
                    <Border Grid.Row="1" Background="#0A0A0F" BorderBrush="#2C2C36" BorderThickness="1" 
                            CornerRadius="2" Padding="15" Height="160" Margin="0,0,0,15">
                        <Grid x:Name="inputContainer">
                            <!-- Single Value -->
                            <StackPanel x:Name="panelSingleValue">
                                <Label Content="Mark Value:" Style="{StaticResource ValueLabel}" Margin="0,0,0,5"/>
                                <TextBox x:Name="txtSingleValue" Style="{StaticResource DarkTextBox}" Height="32"/>
                            </StackPanel>

                            <!-- Sequential Numbers -->
                            <StackPanel x:Name="panelSequential" Visibility="Collapsed">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <Label Content="Start Number:" Style="{StaticResource ValueLabel}" Margin="0,0,0,5"/>
                                        <TextBox x:Name="txtSeqStart" Style="{StaticResource DarkTextBox}" Text="1" Height="32"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2">
                                        <Label Content="Step:" Style="{StaticResource ValueLabel}" Margin="0,0,0,5"/>
                                        <TextBox x:Name="txtSeqStep" Style="{StaticResource DarkTextBox}" Text="1" Height="32"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>

                            <!-- Sequential with Prefix -->
                            <StackPanel x:Name="panelSequentialPrefix" Visibility="Collapsed">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <Label Content="Start Number:" Style="{StaticResource ValueLabel}" Margin="0,0,0,5"/>
                                        <TextBox x:Name="txtPrefixSeqStart" Style="{StaticResource DarkTextBox}" Text="1" Height="32"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2">
                                        <Label Content="Step:" Style="{StaticResource ValueLabel}" Margin="0,0,0,5"/>
                                        <TextBox x:Name="txtPrefixSeqStep" Style="{StaticResource DarkTextBox}" Text="1" Height="32"/>
                                    </StackPanel>
                                </Grid>
                                <Label Content="Prefix:" Style="{StaticResource ValueLabel}" Margin="0,10,0,5"/>
                                <TextBox x:Name="txtPrefix" Style="{StaticResource DarkTextBox}" Height="32"/>
                            </StackPanel>

                            <!-- Comma-Separated -->
                            <StackPanel x:Name="panelCSV" Visibility="Collapsed">
                                <Label Content="Comma-separated values (or one per line):" Style="{StaticResource ValueLabel}" Margin="0,0,0,5"/>
                                <TextBox x:Name="txtCSV" 
                                       Style="{StaticResource DarkTextBox}"
                                       Height="110"
                                       TextWrapping="Wrap"
                                       AcceptsReturn="True"
                                       VerticalScrollBarVisibility="Auto"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Preview -->
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Content="PREVIEW" Style="{StaticResource HeaderLabel}" Margin="0,0,0,5"/>
                        <Border Grid.Row="1" Background="#0A0A0F" BorderBrush="#2C2C36" BorderThickness="1" CornerRadius="2">
                            <TextBox x:Name="txtPreview" 
                                   Style="{StaticResource DarkTextBox}"
                                   BorderThickness="0"
                                   IsReadOnly="True"
                                   TextWrapping="NoWrap"
                                   AcceptsReturn="True"
                                   VerticalScrollBarVisibility="Auto"
                                   HorizontalScrollBarVisibility="Auto"
                                   FontFamily="Consolas"
                                   FontSize="10"
                                   Foreground="#808090"
                                   Text="Click 'Generate Preview'..."/>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- FOOTER: Action Buttons -->
        <Border Grid.Row="2" Background="#1E1E28" BorderBrush="#2C2C36" 
                BorderThickness="0,1,0,0" Padding="20,0">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="txtStatus" Grid.Column="0" 
                         Text="Select elements and configure method" 
                         Foreground="#1976D2" FontFamily="Segoe UI" 
                         FontSize="11" VerticalAlignment="Center"/>

                <Button x:Name="btnPreview" Content="GENERATE PREVIEW" 
                        Style="{StaticResource SecondaryButton}" 
                        Grid.Column="1" Width="180" Height="45" Margin="0,0,10,0"/>
                <Button x:Name="btnApply" Content="APPLY MARKS" 
                        Style="{StaticResource PrimaryButton}" 
                        Grid.Column="2" Width="200" Height="45"/>
            </Grid>
        </Border>
    </Grid>
</Window>
