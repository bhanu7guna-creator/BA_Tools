<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BA_Tools" 
        Width="1000" Height="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#14141C">
    
    <Window.Resources>
        <!-- Primary Button Style (Blue) -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2196F3"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#404050"/>
                    <Setter Property="Foreground" Value="#707080"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style (Gray) -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#3C3C46"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4C4C56"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Small Button Style -->
        <Style x:Key="SmallButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Height" Value="28"/>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="DarkTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#0A0A0F"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="BorderBrush" Value="#1976D2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="CaretBrush" Value="#DCDCDC"/>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#0A0A0F"/>
            <Setter Property="Foreground" Value="#0A0A0F"/>
            <Setter Property="BorderBrush" Value="#1976D2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="8,5"/>
        </Style>

        <!-- CheckBox Style -->
        <Style x:Key="DarkCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <!-- Label Style -->
        <Style x:Key="HeaderLabel" TargetType="Label">
            <Setter Property="Foreground" Value="#808090"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="ValueLabel" TargetType="Label">
            <Setter Property="Foreground" Value="#B0B0C0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#1E1E28" BorderBrush="#1976D2" BorderThickness="0,0,0,2">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo/Icon -->
                <Border Grid.Column="0" Background="#1976D2" CornerRadius="3" 
                        Width="45" Height="45" VerticalAlignment="Center">
                    <TextBlock Text="BA" FontSize="18" FontWeight="Bold" 
                             Foreground="White" HorizontalAlignment="Center" 
                             VerticalAlignment="Center" FontFamily="Segoe UI"/>
                </Border>

                <!-- Title -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0,0,0">
                    <TextBlock Text="PDF &amp; DWG EXPORT MANAGER" FontSize="18" 
                             FontWeight="Bold" Foreground="White" FontFamily="Segoe UI"/>
                    <TextBlock Text="Export production and shop drawing sets to PDF and DWG" 
                             FontSize="11" Foreground="#808090" FontFamily="Segoe UI" 
                             Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Close Button -->
                <Button x:Name="btnClose" Grid.Column="2" Content="Close" 
                        Style="{StaticResource SecondaryButton}" 
                        Width="85" Height="32" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1" Margin="20,20,20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT PANEL: Sheet Selection -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Filter and Selection Controls -->
                <Border Grid.Row="0" Background="#1E1E28" CornerRadius="3" 
                        BorderBrush="#1976D2" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>

                        <!-- View Set Filter -->
                        <Grid Grid.Row="0" Margin="15,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Label Grid.Column="0" Content="View Set:" 
                                 Style="{StaticResource ValueLabel}" 
                                 VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox x:Name="cmbViewSet" Grid.Column="1" 
                                    Style="{StaticResource DarkComboBox}"/>
                        </Grid>

                        <!-- Sheet Filter -->
                        <Grid Grid.Row="1" Background="#252530">
                            <Grid Margin="15,0" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="ðŸ”¹" FontSize="14" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <TextBlock Text="Filter:" FontSize="12" FontWeight="SemiBold" 
                                             Foreground="#808090" VerticalAlignment="Center" 
                                             FontFamily="Segoe UI" Margin="0,0,10,0"/>
                                </StackPanel>
                                
                                <TextBox x:Name="txtSheetFilter" Grid.Column="1" 
                                       Style="{StaticResource DarkTextBox}" 
                                       Height="28"/>
                            </Grid>
                        </Grid>

                        <!-- Action Buttons -->
                        <Grid Grid.Row="2" Margin="15,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="btnSelectAll" Content="Select All" 
                                    Style="{StaticResource SmallButton}" 
                                    Grid.Column="0" Width="90" Margin="0,0,8,0"/>
                            <Button x:Name="btnClearAll" Content="Clear All" 
                                    Style="{StaticResource SecondaryButton}" 
                                    Grid.Column="1" Width="90" Height="28"/>
                            
                            <TextBlock x:Name="txtSheetCount" Grid.Column="3" 
                                     Text="0 / 0 selected" 
                                     Foreground="#1976D2" FontFamily="Segoe UI" 
                                     FontSize="11" FontWeight="SemiBold"
                                     VerticalAlignment="Center"/>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Sheet List -->
                <Border Grid.Row="1" Background="#1E1E28" CornerRadius="3" 
                        BorderBrush="#1976D2" BorderThickness="1" Margin="0,10,0,0">
                    <Border Background="#0A0A0F" Margin="1" CornerRadius="2">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="lstSheets" Margin="10">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding DisplayText}" 
                                                IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                Foreground="#DCDCDC"
                                                FontFamily="Consolas"
                                                FontSize="10"
                                                Margin="4,3"
                                                Padding="8,4">
                                            <CheckBox.Style>
                                                <Style TargetType="CheckBox">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="CheckBox">
                                                                <StackPanel Orientation="Horizontal">
                                                                    <Border x:Name="checkBorder"
                                                                            Width="18" 
                                                                            Height="18" 
                                                                            Background="#0A0A0F"
                                                                            BorderBrush="#808090"
                                                                            BorderThickness="2"
                                                                            CornerRadius="2"
                                                                            Margin="0,0,8,0"
                                                                            VerticalAlignment="Center">
                                                                        <Path x:Name="checkMark"
                                                                              Data="M 0,4 L 4,8 L 10,0"
                                                                              Stroke="White"
                                                                              StrokeThickness="2"
                                                                              Visibility="Collapsed"
                                                                              Margin="2"/>
                                                                    </Border>
                                                                    <ContentPresenter VerticalAlignment="Center"/>
                                                                </StackPanel>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsChecked" Value="True">
                                                                        <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                                                                        <Setter TargetName="checkBorder" Property="Background" Value="#1976D2"/>
                                                                    </Trigger>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="checkBorder" Property="BorderBrush" Value="#2196F3"/>
                                                                        <Setter Property="Foreground" Value="White"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </CheckBox.Style>
                                        </CheckBox>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </Border>
            </Grid>

            <!-- RIGHT PANEL: Export Settings -->
            <Border Grid.Column="1" Background="#1E1E28" CornerRadius="3" 
                    BorderBrush="#1976D2" BorderThickness="1" Margin="10,0,0,0" Padding="20">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Export Formats -->
                        <Label Content="EXPORT FORMATS" Style="{StaticResource HeaderLabel}" Margin="0,0,0,10"/>
                        
                        <CheckBox x:Name="chkExportPDF" Content="Export to PDF" 
                                Style="{StaticResource DarkCheckBox}" IsChecked="True"/>
                        <CheckBox x:Name="chkExportDWG" Content="Export to DWG" 
                                Style="{StaticResource DarkCheckBox}" IsChecked="True"/>

                        <!-- Separator -->
                        <Border Height="1" Background="#2C2C36" Margin="0,20,0,20"/>

                        <!-- PDF Settings -->
                        <Label Content="PDF SETTINGS" Style="{StaticResource HeaderLabel}" Margin="0,0,0,10"/>
                        
                        <Label Content="PDF Output Path:" Style="{StaticResource ValueLabel}" Margin="0,0,0,5"/>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="txtPDFPath" Grid.Column="0" 
                                   Style="{StaticResource DarkTextBox}" 
                                   IsReadOnly="True" Height="32" Margin="0,0,8,0"/>
                            <Button x:Name="btnBrowsePDF" Content="Browse..." 
                                  Style="{StaticResource SecondaryButton}" 
                                  Grid.Column="1" Width="100" Height="32"/>
                        </Grid>

                        <Label Content="File Naming:" Style="{StaticResource ValueLabel}" Margin="0,0,0,5"/>
                        <ComboBox x:Name="cmbPDFNaming" Style="{StaticResource DarkComboBox}" Margin="0,0,0,15"/>

                        <CheckBox x:Name="chkPDFCombine" Content="Combine all sheets into single PDF" 
                                Style="{StaticResource DarkCheckBox}"/>

                        <!-- Separator -->
                        <Border Height="1" Background="#2C2C36" Margin="0,20,0,20"/>

                        <!-- DWG Settings -->
                        <Label Content="DWG SETTINGS" Style="{StaticResource HeaderLabel}" Margin="0,0,0,10"/>
                        
                        <Label Content="DWG Output Path:" Style="{StaticResource ValueLabel}" Margin="0,0,0,5"/>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="txtDWGPath" Grid.Column="0" 
                                   Style="{StaticResource DarkTextBox}" 
                                   IsReadOnly="True" Height="32" Margin="0,0,8,0"/>
                            <Button x:Name="btnBrowseDWG" Content="Browse..." 
                                  Style="{StaticResource SecondaryButton}" 
                                  Grid.Column="1" Width="100" Height="32"/>
                        </Grid>

                        <Label Content="File Naming:" Style="{StaticResource ValueLabel}" Margin="0,0,0,5"/>
                        <ComboBox x:Name="cmbDWGNaming" Style="{StaticResource DarkComboBox}" Margin="0,0,0,15"/>

                        <Label Content="DWG Export Setup:" Style="{StaticResource ValueLabel}" Margin="0,0,0,5"/>
                        <ComboBox x:Name="cmbDWGSetup" Style="{StaticResource DarkComboBox}" Margin="0,0,0,15"/>

                        <Label Content="AutoCAD Version:" Style="{StaticResource ValueLabel}" Margin="0,0,0,5"/>
                        <ComboBox x:Name="cmbDWGVersion" Style="{StaticResource DarkComboBox}"/>

                        <!-- Separator -->
                        <Border Height="1" Background="#2C2C36" Margin="0,20,0,20"/>

                        <!-- Preview -->
                        <Label Content="FILE NAMING PREVIEW" Style="{StaticResource HeaderLabel}" Margin="0,0,0,10"/>
                        
                        <Border Background="#0A0A0F" BorderBrush="#2C2C36" BorderThickness="1" 
                                CornerRadius="2" Padding="10" MinHeight="80">
                            <TextBlock x:Name="txtNamingPreview" 
                                     Text="Select sheets to see naming preview..." 
                                     Foreground="#808090" FontFamily="Consolas" 
                                     FontSize="9" TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- FOOTER: Action Buttons -->
        <Border Grid.Row="2" Background="#1E1E28" BorderBrush="#1976D2" 
                BorderThickness="0,1,0,0" Padding="20,0">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ“„" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock x:Name="txtStatus" 
                             Text="Select sheets and configure export settings" 
                             Foreground="#1976D2" FontFamily="Segoe UI" 
                             FontSize="11" VerticalAlignment="Center"/>
                </StackPanel>

                <Button x:Name="btnExport" Content="EXPORT FILES" 
                        Style="{StaticResource PrimaryButton}" 
                        Grid.Column="1" Width="250" Height="45"/>
            </Grid>
        </Border>
    </Grid>
</Window>
