<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BA-Tools" 
        Width="1000" Height="750"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#14141C"
        x:Name="MainWindow">
    
    <Window.Resources>
        <!-- Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="2" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2196F3"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#404050"/>
                    <Setter Property="Foreground" Value="#707080"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#3C3C46"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4C4C56"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Text Styles -->
        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#B0B0C0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        
        <Style x:Key="DarkTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="BorderBrush" Value="#1976D2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Height" Value="30"/>
        </Style>

        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#000000"/>
            <Setter Property="BorderBrush" Value="#1976D2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Height" Value="30"/>
        </Style>

        <!-- IMPROVED CHECKBOX STYLE - Bright and visible -->
        <Style x:Key="SheetCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#E0E0E8"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,3"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#1E1E28" BorderBrush="#1976D2" BorderThickness="0,0,0,2">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="BA" FontFamily="Segoe UI" FontSize="24" FontWeight="Bold" 
                           Foreground="White" Background="#1976D2" Padding="10,5" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <TextBlock Text="PDF &amp; DWG EXPORT MANAGER" FontFamily="Segoe UI" FontSize="18" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Export production and shop drawing sets to PDF and DWG" FontFamily="Segoe UI" FontSize="10" Foreground="#808090" Margin="0,2,0,0"/>
                </StackPanel>
                <Button x:Name="btnClose" Grid.Column="3" Content="Close" Width="80" Height="32" Style="{StaticResource SecondaryButton}"/>
            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT PANEL - Sheet Selection -->
            <Border Grid.Column="0" Background="#1E1E28" BorderBrush="#1976D2" BorderThickness="0,0,2,0" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Title -->
                    <TextBlock Grid.Row="0" Text="SELECT SHEETS" Foreground="#1976D2" FontFamily="Segoe UI" 
                               FontSize="14" FontWeight="Bold" Margin="0,0,0,12"/>

                    <!-- View Set & Filter -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,12">
                        <TextBlock Text="View Set:" Style="{StaticResource LabelText}"/>
                        <ComboBox x:Name="cmbViewSet" Style="{StaticResource DarkComboBox}" Margin="0,0,0,8"/>
                        
                        <TextBlock Text="Filter:" Style="{StaticResource LabelText}"/>
                        <TextBox x:Name="txtSheetFilter" Style="{StaticResource DarkTextBox}" 
                                 ToolTip="Search by sheet number or name"/>
                    </StackPanel>

                    <!-- Selection Buttons -->
                    <Grid Grid.Row="2" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btnSelectAll" Grid.Column="0" Content="Select All" Height="28" Style="{StaticResource SecondaryButton}"/>
                        <Button x:Name="btnClearAll" Grid.Column="2" Content="Clear All" Height="28" Style="{StaticResource SecondaryButton}"/>
                        <TextBlock x:Name="txtSheetCount" Grid.Column="4" Text="0 / 0 selected" 
                                   Foreground="#B0B0C0" FontSize="10" VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Sheets List with IMPROVED VISIBILITY -->
                    <Border Grid.Row="3" Background="#0A0A0F" BorderBrush="#1976D2" BorderThickness="1" CornerRadius="2">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="lstSheets">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <!-- BRIGHT BACKGROUND ON HOVER -->
                                        <Border BorderBrush="#2A2A38" BorderThickness="0,0,0,1" Padding="12,6">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#1A2A3A"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            
                                            <CheckBox Content="{Binding DisplayText}" 
                                                      IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                      Style="{StaticResource SheetCheckBox}"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Border>

            <!-- RIGHT PANEL - Export Settings -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    
                    <!-- Export Formats -->
                    <TextBlock Text="EXPORT FORMATS" Foreground="#1976D2" FontFamily="Segoe UI" 
                               FontSize="14" FontWeight="Bold" Margin="0,0,0,12"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <CheckBox x:Name="chkExportPDF" Content="Export to PDF" IsChecked="True" 
                                  Foreground="#E0E0E8" FontSize="12" Margin="0,0,30,0"/>
                        <CheckBox x:Name="chkExportDWG" Content="Export to DWG" IsChecked="True" 
                                  Foreground="#E0E0E8" FontSize="12"/>
                    </StackPanel>

                    <!-- PDF Settings -->
                    <Border Background="#1E1E28" BorderBrush="#1976D2" BorderThickness="1" CornerRadius="2" 
                            Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="PDF SETTINGS" Foreground="#1976D2" FontWeight="Bold" 
                                       FontSize="12" Margin="0,0,0,12"/>
                            
                            <TextBlock Text="PDF Output Path:" Style="{StaticResource LabelText}"/>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="txtPDFPath" Grid.Column="0" Style="{StaticResource DarkTextBox}"/>
                                <Button x:Name="btnBrowsePDF" Grid.Column="2" Content="Browse..." Width="80" Height="30" 
                                        Style="{StaticResource SecondaryButton}"/>
                            </Grid>

                            <TextBlock Text="File Naming:" Style="{StaticResource LabelText}"/>
                            <ComboBox x:Name="cmbPDFNaming" Style="{StaticResource DarkComboBox}" Margin="0,0,0,12"/>

                            <CheckBox x:Name="chkPDFCombine" Content="Combine all sheets into single PDF" 
                                      Foreground="#E0E0E8" FontSize="11"/>
                        </StackPanel>
                    </Border>

                    <!-- DWG Settings -->
                    <Border Background="#1E1E28" BorderBrush="#1976D2" BorderThickness="1" CornerRadius="2" 
                            Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="DWG SETTINGS" Foreground="#1976D2" FontWeight="Bold" 
                                       FontSize="12" Margin="0,0,0,12"/>
                            
                            <TextBlock Text="DWG Output Path:" Style="{StaticResource LabelText}"/>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="txtDWGPath" Grid.Column="0" Style="{StaticResource DarkTextBox}"/>
                                <Button x:Name="btnBrowseDWG" Grid.Column="2" Content="Browse..." Width="80" Height="30" 
                                        Style="{StaticResource SecondaryButton}"/>
                            </Grid>

                            <TextBlock Text="File Naming:" Style="{StaticResource LabelText}"/>
                            <ComboBox x:Name="cmbDWGNaming" Style="{StaticResource DarkComboBox}" Margin="0,0,0,12"/>

                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Export Setup:" Style="{StaticResource LabelText}"/>
                                    <ComboBox x:Name="cmbDWGSetup" Style="{StaticResource DarkComboBox}"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="AutoCAD Version:" Style="{StaticResource LabelText}"/>
                                    <ComboBox x:Name="cmbDWGVersion" Style="{StaticResource DarkComboBox}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Naming Preview -->
                    <Border Background="#0A0A0F" BorderBrush="#1976D2" BorderThickness="1" CornerRadius="2" 
                            Padding="12">
                        <StackPanel>
                            <TextBlock Text="ðŸ“‹ NAMING PREVIEW" Foreground="#1976D2" FontWeight="SemiBold" 
                                       FontSize="10" Margin="0,0,0,8"/>
                            <TextBox x:Name="txtNamingPreview" 
                                     Background="Transparent" 
                                     Foreground="#B0B0C0" 
                                     BorderThickness="0" 
                                     FontFamily="Consolas" 
                                     FontSize="9" 
                                     TextWrapping="Wrap" 
                                     IsReadOnly="True"
                                     MinHeight="100"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- FOOTER -->
        <Border Grid.Row="2" Background="#1E1E28" BorderBrush="#1976D2" BorderThickness="0,2,0,0">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="txtStatus" Grid.Column="0" Text="Select sheets and configure export settings" 
                           FontFamily="Segoe UI" FontSize="11" Foreground="#808090" VerticalAlignment="Center"/>
                <Button x:Name="btnExport" Grid.Column="2" Content="EXPORT FILES" Width="200" Height="40" 
                        Style="{StaticResource PrimaryButton}" FontSize="12"/>
            </Grid>
        </Border>
    </Grid>
</Window>
