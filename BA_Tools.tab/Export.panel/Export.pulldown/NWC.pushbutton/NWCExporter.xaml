<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BA_Tools" 
        Width="800" Height="640"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#14141C">
    
    <Window.Resources>
        <!-- Primary Button Style (Blue) -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2196F3"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#404050"/>
                    <Setter Property="Foreground" Value="#707080"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style (Gray) -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#3C3C46"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4C4C56"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Dark Button Style -->
        <Style x:Key="DarkButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#2C2C36"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3C3C46"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#0A0A0F"/>
            <Setter Property="Foreground" Value="#0A0A0F"/>
            <Setter Property="BorderBrush" Value="#2C2C36"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="8,5"/>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="DarkTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#0A0A0F"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="BorderBrush" Value="#2C2C36"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="CaretBrush" Value="#DCDCDC"/>
        </Style>

        <!-- CheckBox Style -->
        <Style x:Key="DarkCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,3"/>
        </Style>

        <!-- Label Style -->
        <Style x:Key="HeaderLabel" TargetType="Label">
            <Setter Property="Foreground" Value="#808090"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="ValueLabel" TargetType="Label">
            <Setter Property="Foreground" Value="#B0B0C0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
    </Window.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="65"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" Background="#1E1E28" BorderBrush="#1976D2" BorderThickness="0,0,0,2">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo/Icon -->
                <Border Grid.Column="0" Background="#1976D2" CornerRadius="3" 
                        Width="45" Height="45" VerticalAlignment="Center">
                    <TextBlock Text="BA" FontSize="18" FontWeight="Bold" 
                             Foreground="White" HorizontalAlignment="Center" 
                             VerticalAlignment="Center" FontFamily="Segoe UI"/>
                </Border>

                <!-- Title -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0,0,0">
                    <TextBlock Text="NWC EXTRACTOR" FontSize="18" 
                             FontWeight="Bold" Foreground="White" FontFamily="Segoe UI"/>
                    <TextBlock Text="Export Navisworks Cache files from Revit" 
                             FontSize="10" Foreground="#808090" FontFamily="Segoe UI" 
                             Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Close Button -->
                <Button x:Name="btnClose" Grid.Column="2" Content="Close" 
                        Style="{StaticResource SecondaryButton}" 
                        Width="85" Height="32" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1" Margin="15,15,15,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="480"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT PANEL: Export Settings -->
            <Border Grid.Column="0" Background="#1E1E28" CornerRadius="3" 
                    BorderBrush="#2196F3" BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <!-- Header -->
                        <Label Content="EXPORT SETTINGS" 
                             Style="{StaticResource HeaderLabel}" 
                             Margin="0,5,0,20"/>

                        <!-- Source View -->
                        <Label Content="Source 3D View:" 
                             Style="{StaticResource ValueLabel}" 
                             Margin="0,0,0,5"/>
                        <ComboBox x:Name="cmbSourceView" 
                                Style="{StaticResource DarkComboBox}" 
                                Margin="0,0,0,20"/>

                        <!-- Separator -->
                        <Border Height="1" Background="#2C2C36" Margin="0,10,0,20"/>

                        <!-- Output Directory -->
                        <Label Content="Output Directory:" 
                             Style="{StaticResource ValueLabel}" 
                             Margin="0,0,0,5"/>
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox x:Name="txtOutputPath" 
                                   Style="{StaticResource DarkTextBox}" 
                                   Grid.Column="0" 
                                   IsReadOnly="True"
                                   Height="32"
                                   Margin="0,0,8,0"/>
                            <Button x:Name="btnBrowse" 
                                  Content="Browse..." 
                                  Style="{StaticResource SecondaryButton}" 
                                  Grid.Column="1" 
                                  Width="100" 
                                  Height="32"/>
                        </Grid>

                        <!-- Separator -->
                        <Border Height="1" Background="#2C2C36" Margin="0,10,0,20"/>

                        <!-- Filename -->
                        <Label Content="Filename:" 
                             Style="{StaticResource ValueLabel}" 
                             Margin="0,0,0,5"/>
                        <TextBox x:Name="txtFilename" 
                               Style="{StaticResource DarkTextBox}" 
                               Height="32"
                               Margin="0,0,0,10"/>
                        
                        <CheckBox x:Name="chkUseProjectName" 
                                Content="Use Project Name"
                                Style="{StaticResource DarkCheckBox}"
                                IsChecked="True"
                                Margin="0,0,0,25"/>

                        <!-- Separator -->
                        <Border Height="1" Background="#2C2C36" Margin="0,10,0,20"/>

                        <!-- Export Options -->
                        <Label Content="EXPORT OPTIONS" 
                             Style="{StaticResource HeaderLabel}" 
                             Margin="0,0,0,10"/>
                        
                        <CheckBox x:Name="chkExportLinks" 
                                Content="Export Links"
                                Style="{StaticResource DarkCheckBox}"
                                Margin="0,0,0,5"/>
                        
                        <CheckBox x:Name="chkExportRoomGeometry" 
                                Content="Export Room Geometry"
                                Style="{StaticResource DarkCheckBox}"
                                IsChecked="True"
                                Margin="0,0,0,5"/>
                        
                        <CheckBox x:Name="chkExportRoomAsAttribute" 
                                Content="Export Room as Attribute"
                                Style="{StaticResource DarkCheckBox}"
                                IsChecked="True"
                                Margin="0,0,0,5"/>
                        
                        <CheckBox x:Name="chkConvertElementProperties" 
                                Content="Convert Element Properties"
                                Style="{StaticResource DarkCheckBox}"
                                IsChecked="True"
                                Margin="0,0,0,5"/>
                        
                        <CheckBox x:Name="chkExportUrls" 
                                Content="Export URLs"
                                Style="{StaticResource DarkCheckBox}"
                                IsChecked="True"
                                Margin="0,0,0,5"/>
                        
                        <CheckBox x:Name="chkConvertLights" 
                                Content="Convert Lights"
                                Style="{StaticResource DarkCheckBox}"
                                IsChecked="True"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- RIGHT PANEL: System Log -->
            <Border Grid.Column="1" Background="#1E1E28" CornerRadius="3" 
                    BorderBrush="#2196F3" BorderThickness="1" Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Background="#252530" 
                            CornerRadius="3,3,0,0">
                        <Label Content="SYSTEM LOG" 
                             Style="{StaticResource HeaderLabel}" 
                             VerticalAlignment="Center" Margin="15,0"/>
                    </Border>

                    <!-- Log Content -->
                    <Border Grid.Row="1" Background="#0A0A0F" Margin="1">
                        <TextBox x:Name="txtLog" 
                               Style="{StaticResource DarkTextBox}"
                               BorderThickness="0"
                               IsReadOnly="True"
                               TextWrapping="Wrap"
                               AcceptsReturn="True"
                               VerticalScrollBarVisibility="Auto"
                               FontFamily="Consolas"
                               FontSize="10"
                               Foreground="#808090"
                               Margin="10"
                               Text="Ready for export..."/>
                    </Border>

                    <!-- Status Bar -->
                    <Border Grid.Row="2" Background="#252530" 
                            CornerRadius="0,0,2,2">
                        <Grid Margin="15,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" 
                                     Text="STATUS:" 
                                     FontFamily="Consolas" 
                                     FontSize="9" 
                                     Foreground="#606070" 
                                     VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtStatus" 
                                     Grid.Column="1" 
                                     Text="IDLE" 
                                     FontFamily="Consolas" 
                                     FontSize="9" 
                                     Foreground="#808090" 
                                     VerticalAlignment="Center"
                                     Margin="5,0,0,0"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- FOOTER: Action Buttons -->
        <Border Grid.Row="2" Background="#1E1E28" BorderBrush="#2196F3" 
                BorderThickness="0,1,0,0" Padding="15,0">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ“" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock x:Name="txtFileInfo" 
                             Text="No file selected" 
                             Foreground="#606070" FontFamily="Segoe UI" 
                             FontSize="11" VerticalAlignment="Center"/>
                </StackPanel>

                <Button x:Name="btnExport" Content="EXPORT NWC FILE" 
                        Style="{StaticResource PrimaryButton}" 
                        Grid.Column="1" Width="220" Height="40"/>
            </Grid>
        </Border>
    </Grid>
</Window>
